<Window x:Class="Einsatzueberwachung.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        Title="Einsatzüberwachung Professional v1.5" 
        Height="925" Width="580"
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/Resources/app.ico"
        ResizeMode="CanResize"
        MinHeight="660" MinWidth="580"
        Background="{DynamicResource SurfaceContainer}">

    <Window.Resources>
        <!-- Label Style using global colors -->
        <Style x:Key="FormLabel" TargetType="Label">
            <Setter Property="Foreground" Value="{DynamicResource OnSurfaceVariant}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        
        <!-- RadioButton Style -->
        <Style x:Key="FormRadioButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="{DynamicResource OnSurface}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header Section -->
        <Border Grid.Row="0" Margin="0,0,0,24">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1565C0" Offset="0"/>
                    <GradientStop Color="#1976D2" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Style>
                <Style TargetType="Border" BasedOn="{StaticResource Card}">
                    <Setter Property="Effect" Value="{StaticResource Elevation3}"/>
                </Style>
            </Border.Style>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Professional Logo -->
                <Border Grid.Column="0" Width="80" Height="80" CornerRadius="40" 
                       Background="White" Margin="0,0,20,0" VerticalAlignment="Center"
                       Effect="{StaticResource Elevation2}">
                    
                    <Grid>
                        <Image x:Name="LogoImage" Source="/Resources/logo.jpeg" 
                              Stretch="UniformToFill" Width="70" Height="70" ClipToBounds="True">
                            <Image.Clip>
                                <EllipseGeometry RadiusX="35" RadiusY="35" Center="35,35"/>
                            </Image.Clip>
                        </Image>
                        
                        <Border Background="{DynamicResource Primary}" CornerRadius="35" Width="70" Height="70"
                               Visibility="Collapsed" x:Name="LogoFallback">
                            <fa:ImageAwesome Icon="Paw" Width="35" Height="35" Foreground="White"/>
                        </Border>
                    </Grid>
                </Border>
                
                <!-- App Branding -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Einsatzüberwachung" 
                              Style="{StaticResource HeadlineMedium}"
                              Foreground="White" Margin="0,0,0,4"/>
                    <TextBlock Text="Professional v1.5" 
                              Style="{StaticResource TitleLarge}"
                              Foreground="White" Opacity="0.9" Margin="0,0,0,8"/>
                    <TextBlock Text="🐕 Multiple Team Types Edition" 
                              Style="{StaticResource BodyMedium}"
                              Foreground="White" Opacity="0.8"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Content Section -->
        <StackPanel Grid.Row="1">
            <!-- Mission Configuration -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <fa:ImageAwesome Icon="List" Width="20" Height="20" 
                                       Foreground="{DynamicResource Primary}" Margin="0,0,8,0"/>
                        <TextBlock Text="Einsatz Konfiguration" Style="{StaticResource TitleMedium}"
                                  Foreground="{DynamicResource Primary}"/>
                    </StackPanel>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <Label Content="Einsatzleiter" Style="{StaticResource FormLabel}" Margin="0,0,0,4"/>
                            <TextBox x:Name="TxtEinsatzleiter" Style="{StaticResource TextField}" Margin="0,0,0,12"/>
                            
                            <Label Content="Einsatzort" Style="{StaticResource FormLabel}" Margin="0,0,0,4"/>
                            <TextBox x:Name="TxtEinsatzort" Style="{StaticResource TextField}" Margin="0,0,0,12"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <Label Content="Typ" Style="{StaticResource FormLabel}" Margin="0,0,0,4"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <RadioButton x:Name="RbEinsatz" Content="🚨 Einsatz" IsChecked="True" 
                                           Margin="0,0,16,0" Style="{StaticResource FormRadioButton}"/>
                                <RadioButton x:Name="RbUebung" Content="🎯 Übung" Style="{StaticResource FormRadioButton}"/>
                            </StackPanel>
                            
                            <Label Content="Alarmiert durch" Style="{StaticResource FormLabel}" Margin="0,0,0,4"/>
                            <TextBox x:Name="TxtAlarmiert" Style="{StaticResource TextField}" Margin="0,0,0,12"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Timer Configuration -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <fa:ImageAwesome Icon="ClockOutline" Width="20" Height="20" 
                                       Foreground="{DynamicResource Warning}" Margin="0,0,8,0"/>
                        <TextBlock Text="Timer Einstellungen" Style="{StaticResource TitleMedium}"
                                  Foreground="{DynamicResource Warning}"/>
                    </StackPanel>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <Label Content="1. Warnung (Minuten)" Style="{StaticResource FormLabel}" Margin="0,0,0,4"/>
                            <TextBox x:Name="TxtWarning1" Text="10" Style="{StaticResource TextField}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="8,0,0,0">
                            <Label Content="2. Warnung (Minuten)" Style="{StaticResource FormLabel}" Margin="0,0,0,4"/>
                            <TextBox x:Name="TxtWarning2" Text="20" Style="{StaticResource TextField}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Feature Highlight -->
            <Border Style="{StaticResource Card}" Background="{DynamicResource SuccessContainer}" 
                   BorderBrush="{DynamicResource Success}" BorderThickness="1">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <fa:ImageAwesome Icon="Star" Width="18" Height="18" 
                                       Foreground="{DynamicResource Success}" Margin="0,0,8,0"/>
                        <TextBlock Text="Neu in Version 1.5" Style="{StaticResource TitleSmall}"
                                  Foreground="{DynamicResource OnSuccessContainer}"/>
                    </StackPanel>
                    
                    <TextBlock TextWrapping="Wrap" Style="{StaticResource BodySmall}"
                              Foreground="{DynamicResource OnSuccessContainer}" LineHeight="18">
                        <Run Text="🐕 Multiple Spezialisierungen pro Hund"/>
                        <LineBreak/>
                        <Run Text="⚡ Teams werden im Hauptfenster hinzugefügt"/>
                        <LineBreak/>
                        <Run Text="🎯 Vereinfachter und flexibler Workflow"/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Action Section -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" 
                   Margin="0,24,0,0">
            <Button x:Name="BtnCancel" Content="Abbrechen" Click="BtnCancel_Click"
                   Style="{StaticResource OutlinedButton}" Margin="0,0,16,0"/>
            
            <Button x:Name="BtnStart" Click="BtnStart_Click"
                   Style="{StaticResource FilledButton}" 
                   Background="{DynamicResource Success}" Padding="32,12">
                <StackPanel Orientation="Horizontal">
                    <fa:ImageAwesome Icon="Play" Width="16" Height="16" 
                                   Foreground="White" Margin="0,0,8,0"/>
                    <TextBlock Text="Einsatz starten" Foreground="White" FontWeight="Medium"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
