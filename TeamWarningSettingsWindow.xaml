<Window x:Class="Einsatzueberwachung.TeamWarningSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        Title="Team-Warnschwellen" Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        Icon="pack://application:,,,/Resources/app.ico"
        ResizeMode="NoResize"
        Background="{DynamicResource SurfaceContainer}">

    <Window.Resources>
        <!-- Enhanced Slider Style -->
        <Style x:Key="WarningSlider" TargetType="Slider">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="0,8,0,16"/>
            <Setter Property="Foreground" Value="{DynamicResource Primary}"/>
            <Setter Property="Background" Value="{DynamicResource SurfaceVariant}"/>
        </Style>

        <!-- Numeric TextBox Style -->
        <Style x:Key="TimeInput" TargetType="TextBox" BasedOn="{StaticResource TextField}">
            <Setter Property="Width" Value="80"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- Team Card Style -->
        <Style x:Key="TeamWarningCard" TargetType="Border" BasedOn="{StaticResource Card}">
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Padding" Value="20"/>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Style="{StaticResource Card}" 
               Background="{DynamicResource PrimaryContainer}" 
               Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Icon -->
                <Border Width="56" Height="56" CornerRadius="28" 
                       Background="{DynamicResource Primary}" Margin="0,0,16,0">
                    <fa:ImageAwesome Icon="ClockOutline" Width="28" Height="28" 
                                   Foreground="White"/>
                </Border>
                
                <!-- Title -->
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Team-Warnschwellen" Style="{StaticResource HeadlineSmall}"
                              Foreground="{DynamicResource OnPrimaryContainer}"/>
                    <TextBlock x:Name="TxtSubtitle" Text="Individuelle Zeiten für jedes Team festlegen" 
                              Style="{StaticResource BodyMedium}"
                              Foreground="{DynamicResource OnPrimaryContainer}" Opacity="0.8"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Global Settings -->
        <Border Grid.Row="1" Style="{StaticResource Card}" 
               Background="{DynamicResource SuccessContainer}"
               BorderBrush="{DynamicResource Success}" BorderThickness="1"
               Margin="0,0,0,20">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <fa:ImageAwesome Icon="Globe" Width="16" Height="16" 
                                   Foreground="{DynamicResource Success}" Margin="0,0,8,0"/>
                    <TextBlock Text="Globale Einstellungen" Style="{StaticResource TitleSmall}"
                              Foreground="{DynamicResource OnSuccessContainer}"/>
                </StackPanel>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Diese Werte werden als Standard für neue Teams verwendet:" 
                                  Style="{StaticResource BodySmall}"
                                  Foreground="{DynamicResource OnSuccessContainer}" 
                                  TextWrapping="Wrap" Margin="0,0,0,8"/>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="1. Warnung:" Style="{StaticResource LabelMedium}"
                                      Foreground="{DynamicResource OnSuccessContainer}"
                                      VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock x:Name="TxtGlobalWarning1" Text="10 Min" 
                                      Style="{StaticResource LabelMedium}" FontWeight="Bold"
                                      Foreground="{DynamicResource OnSuccessContainer}"
                                      VerticalAlignment="Center" Margin="0,0,16,0"/>
                            
                            <TextBlock Text="2. Warnung:" Style="{StaticResource LabelMedium}"
                                      Foreground="{DynamicResource OnSuccessContainer}"
                                      VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock x:Name="TxtGlobalWarning2" Text="20 Min" 
                                      Style="{StaticResource LabelMedium}" FontWeight="Bold"
                                      Foreground="{DynamicResource OnSuccessContainer}"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <Button x:Name="BtnApplyGlobal" Grid.Column="1" 
                           Content="Auf alle anwenden" 
                           Style="{StaticResource TextButton}"
                           Click="BtnApplyGlobal_Click"
                           ToolTip="Globale Werte auf alle Teams anwenden"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Team Settings List -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="TeamsSettingsPanel">
                <!-- Team settings will be added here dynamically -->
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" 
                   Margin="0,20,0,0">
            <Button Content="Abbrechen" Click="BtnCancel_Click" 
                   Style="{StaticResource OutlinedButton}" Margin="0,0,12,0"/>
               
            <Button x:Name="BtnSave" Click="BtnSave_Click" 
                   Style="{StaticResource FilledButton}" 
                   Background="{DynamicResource Primary}" Margin="12,0,0,0">
                <StackPanel Orientation="Horizontal">
                    <fa:ImageAwesome Icon="Save" Width="14" Height="14" 
                                   Foreground="White" Margin="0,0,8,0"/>
                    <TextBlock Text="Speichern" Foreground="White"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
