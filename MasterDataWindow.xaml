<Window x:Class="Einsatzueberwachung.MasterDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        Title="Stammdaten - Personal &amp; Hunde"
        Height="700" Width="1100"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource Surface}"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceContainer}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource OutlineVariant}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Primary}"/>
            <Setter Property="Foreground" Value="{DynamicResource OnPrimary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="Foreground" Value="{DynamicResource OnSurface}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource OutlineVariant}"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{DynamicResource SurfaceContainer}"/>
            <Setter Property="Foreground" Value="{DynamicResource OnSurface}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Primary}"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource OnSurface}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource PrimaryContainer}"/>
                    <Setter Property="Foreground" Value="{DynamicResource OnPrimaryContainer}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="{DynamicResource SurfaceContainer}"/>
            <Setter Property="Foreground" Value="{DynamicResource OnSurface}"/>
            <Style.Triggers>
                <Trigger Property="AlternationIndex" Value="1">
                    <Setter Property="Background" Value="{DynamicResource SurfaceVariant}"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource PrimaryContainer}"/>
                    <Setter Property="Foreground" Value="{DynamicResource OnPrimaryContainer}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SurfaceContainerHighest}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Margin="0,0,0,8" Padding="20" CornerRadius="12">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF7043" Offset="0"/>
                    <GradientStop Color="#F4511E" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <fa:ImageAwesome Grid.Column="0" Icon="Database" Width="32" Height="32" 
                                Foreground="White" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Margin="16,0" VerticalAlignment="Center">
                    <TextBlock Text="Stammdatenverwaltung" FontSize="24" FontWeight="Bold" 
                              Foreground="White"/>
                    <TextBlock Text="Verwalten Sie Personal und Hunde fÃ¼r schnellere Einsatzerfassung" 
                              FontSize="12" Foreground="White" Opacity="0.9" Margin="0,4,0,0"/>
                </StackPanel>

                <Button Grid.Column="2" Content="SchlieÃŸen" Click="BtnClose_Click" 
                       Style="{StaticResource PrimaryButtonStyle}" Padding="20,8"/>
            </Grid>
        </Border>

        <!-- Main Content - TabControl -->
        <TabControl Grid.Row="1" BorderThickness="0" Background="Transparent">
            <!-- Personal Tab -->
            <TabItem Header="ðŸ‘¤ Personal">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Personal Toolbar -->
                    <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="âž• Neu" Click="BtnAddPersonal_Click" 
                                   Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,8,0"/>
                            <Button Content="âœï¸ Bearbeiten" Click="BtnEditPersonal_Click" 
                                   Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,8,0"
                                   x:Name="BtnEditPersonal" IsEnabled="False"/>
                            <Button Content="ðŸ—‘ï¸ LÃ¶schen" Click="BtnDeletePersonal_Click" 
                                   Style="{StaticResource PrimaryButtonStyle}"
                                   x:Name="BtnDeletePersonal" IsEnabled="False"/>
                        </StackPanel>
                    </Border>

                    <!-- Personal List -->
                    <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                        <DataGrid x:Name="PersonalDataGrid" 
                                 AutoGenerateColumns="False" 
                                 SelectionMode="Single"
                                 CanUserAddRows="False"
                                 CanUserDeleteRows="False"
                                 SelectionChanged="PersonalDataGrid_SelectionChanged"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 GridLinesVisibility="Horizontal"
                                 RowBackground="{DynamicResource SurfaceContainer}"
                                 AlternatingRowBackground="{DynamicResource SurfaceVariant}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Vorname" Binding="{Binding Vorname}" Width="150"/>
                                <DataGridTextColumn Header="Nachname" Binding="{Binding Nachname}" Width="150"/>
                                <DataGridTextColumn Header="FÃ¤higkeiten" Binding="{Binding SkillsDisplay}" Width="*"/>
                                <DataGridTextColumn Header="KÃ¼rzel" Binding="{Binding SkillsShortDisplay}" Width="100"/>
                                <DataGridCheckBoxColumn Header="Aktiv" Binding="{Binding IsActive}" Width="60"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Hunde Tab -->
            <TabItem Header="ðŸ• Hunde">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Dogs Toolbar -->
                    <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="âž• Neu" Click="BtnAddDog_Click" 
                                   Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,8,0"/>
                            <Button Content="âœï¸ Bearbeiten" Click="BtnEditDog_Click" 
                                   Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,8,0"
                                   x:Name="BtnEditDog" IsEnabled="False"/>
                            <Button Content="ðŸ—‘ï¸ LÃ¶schen" Click="BtnDeleteDog_Click" 
                                   Style="{StaticResource PrimaryButtonStyle}"
                                   x:Name="BtnDeleteDog" IsEnabled="False"/>
                        </StackPanel>
                    </Border>

                    <!-- Dogs List -->
                    <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                        <DataGrid x:Name="DogsDataGrid" 
                                 AutoGenerateColumns="False" 
                                 SelectionMode="Single"
                                 CanUserAddRows="False"
                                 CanUserDeleteRows="False"
                                 SelectionChanged="DogsDataGrid_SelectionChanged"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 GridLinesVisibility="Horizontal"
                                 RowBackground="{DynamicResource SurfaceContainer}"
                                 AlternatingRowBackground="{DynamicResource SurfaceVariant}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                                <DataGridTextColumn Header="Rasse" Binding="{Binding Rasse}" Width="120"/>
                                <DataGridTextColumn Header="Alter" Binding="{Binding Alter}" Width="60"/>
                                <DataGridTextColumn Header="Spezialisierungen" Binding="{Binding SpecializationsDisplay}" Width="*"/>
                                <DataGridTextColumn Header="KÃ¼rzel" Binding="{Binding SpecializationsShortDisplay}" Width="100"/>
                                <DataGridCheckBoxColumn Header="Aktiv" Binding="{Binding IsActive}" Width="60"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Statistik Tab -->
            <TabItem Header="ðŸ“Š Ãœbersicht">
                <Border Style="{StaticResource CardStyle}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="16">
                            <TextBlock Text="Stammdaten-Statistik" FontSize="20" FontWeight="Bold" 
                                      Foreground="{DynamicResource OnSurface}" Margin="0,0,0,16"/>

                            <!-- Personal Statistics -->
                            <Border Background="{DynamicResource PrimaryContainer}" 
                                   CornerRadius="8" Padding="16" Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text="ðŸ‘¤ Personal" FontSize="16" FontWeight="SemiBold" 
                                              Foreground="{DynamicResource OnPrimaryContainer}"/>
                                    <TextBlock x:Name="TxtPersonalStats" FontSize="14" 
                                              Foreground="{DynamicResource OnPrimaryContainer}" 
                                              Margin="0,8,0,0" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <!-- Dog Statistics -->
                            <Border Background="{DynamicResource SuccessContainer}" 
                                   CornerRadius="8" Padding="16">
                                <StackPanel>
                                    <TextBlock Text="ðŸ• Hunde" FontSize="16" FontWeight="SemiBold" 
                                              Foreground="{DynamicResource OnSuccessContainer}"/>
                                    <TextBlock x:Name="TxtDogStats" FontSize="14" 
                                              Foreground="{DynamicResource OnSuccessContainer}" 
                                              Margin="0,8,0,0" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </TabItem>
        </TabControl>

        <!-- Footer -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,8,0,0">
            <Grid>
                <TextBlock x:Name="TxtStatus" Text="Bereit" 
                          Foreground="{DynamicResource OnSurfaceVariant}" 
                          VerticalAlignment="Center"/>
                <TextBlock x:Name="TxtCounts" Text="Personal: 0 | Hunde: 0" 
                          Foreground="{DynamicResource OnSurfaceVariant}" 
                          HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
