<views:BaseThemeWindow x:Class="Einsatzueberwachung.Views.MobileConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:Einsatzueberwachung.Views"
        xmlns:views="clr-namespace:Einsatzueberwachung.Views"
        Title="{Binding WindowTitle}" 
        Height="680" Width="820"
        WindowStartupLocation="CenterOwner"
        Icon="pack://application:,,,/Resources/app.ico"
        Background="{DynamicResource SurfaceContainer}">

    <Window.Resources>
        <!-- Converter fÃ¼r QR-Code-Anzeige -->
        <local:ByteArrayToBitmapImageConverter x:Key="ByteArrayToBitmapConverter"/>
        
        <!-- Mobile Connection Styles - Orange Design System -->
        <Style x:Key="OrangeMobileCard" TargetType="Border" BasedOn="{StaticResource Card}">
            <Setter Property="Background" Value="{DynamicResource Surface}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Primary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect" Value="{StaticResource Elevation2}"/>
        </Style>
        
        <Style x:Key="OrangeMobileActionButton" TargetType="Button" BasedOn="{StaticResource FilledButton}">
            <Setter Property="Background" Value="{DynamicResource Primary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Padding" Value="16,12"/>
        </Style>
        
        <Style x:Key="OrangeMobileSecondaryButton" TargetType="Button" BasedOn="{StaticResource OutlinedButton}">
            <Setter Property="BorderBrush" Value="{DynamicResource Primary}"/>
            <Setter Property="Foreground" Value="{DynamicResource Primary}"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="Padding" Value="12,8"/>
        </Style>
        
        <Style x:Key="OrangeMobileQuickActionButton" TargetType="Button" BasedOn="{StaticResource TextButton}">
            <Setter Property="Foreground" Value="{DynamicResource Primary}"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        
        <Style x:Key="OrangeQRContainer" TargetType="Border" BasedOn="{StaticResource Card}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Primary}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Effect" Value="{StaticResource Elevation3}"/>
        </Style>
        
        <Style x:Key="OrangeStatusIndicator" TargetType="Border">
            <Setter Property="Width" Value="14"/>
            <Setter Property="Height" Value="14"/>
            <Setter Property="CornerRadius" Value="7"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#F57C00" Direction="270" 
                                      ShadowDepth="1" Opacity="0.3" BlurRadius="3"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - QR Code & Connection (MVVM) -->
        <Border Grid.Column="0" Style="{StaticResource OrangeMobileCard}" Margin="0,0,10,0">
            <StackPanel>
                <!-- Orange Header with Primary Gradient -->
                <Border CornerRadius="12,12,0,0" Margin="-21,-21,-21,20" Padding="24,16">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#FF7043" Offset="0"/>
                            <GradientStop Color="#F4511E" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel Orientation="Horizontal">
                        <Border Width="52" Height="52" CornerRadius="26" 
                               Background="White" Margin="0,0,14,0">
                            <Border.Effect>
                                <DropShadowEffect Color="White" Direction="270" ShadowDepth="2" 
                                                  Opacity="0.4" BlurRadius="6"/>
                            </Border.Effect>
                            <fa:ImageAwesome Icon="Mobile" Width="26" Height="26" 
                                           Foreground="#F4511E"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="ðŸ“± Mobile Verbindung" Style="{StaticResource TitleLarge}"
                                      Foreground="White" FontWeight="Bold"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <Border Style="{StaticResource OrangeStatusIndicator}"
                                       Background="{Binding StatusIndicatorBackground}"/>
                                <TextBlock Text="{Binding StatusText}" 
                                          Style="{StaticResource BodyMedium}"
                                          Foreground="White" FontWeight="Medium"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Connection Controls (MVVM Commands) -->
                <StackPanel Margin="0,0,0,20">
                    <Button Command="{Binding StartServerCommand}" 
                           Style="{StaticResource OrangeMobileActionButton}"
                           IsEnabled="{Binding IsStartButtonEnabled}">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Play" Width="16" Height="16" 
                                           Foreground="White" Margin="0,0,8,0"/>
                            <TextBlock Text="Server starten" Foreground="White" FontWeight="Medium"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding StopServerCommand}" 
                           Style="{StaticResource OrangeMobileSecondaryButton}"
                           IsEnabled="{Binding IsStopButtonEnabled}">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Stop" Width="16" Height="16" 
                                           Foreground="{DynamicResource Primary}" Margin="0,0,8,0"/>
                            <TextBlock Text="Server stoppen" Foreground="{DynamicResource Primary}" FontWeight="Medium"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- QR Code Section (MVVM Binding) -->
                <Border Style="{StaticResource OrangeQRContainer}" 
                       Visibility="{Binding QRCodeVisibility}">
                    <StackPanel>
                        <TextBlock Text="ðŸ“± QR-Code scannen" Style="{StaticResource TitleMedium}"
                                  Foreground="{DynamicResource OnSurface}" HorizontalAlignment="Center" 
                                  Margin="0,0,0,16" FontWeight="Bold"/>
                        
                        <!-- QR Code Display with Orange Border - Fixed Binding -->
                        <Border Width="220" Height="220" 
                                BorderBrush="{DynamicResource Primary}" BorderThickness="3" 
                                CornerRadius="12" Background="White">
                            <Border.Effect>
                                <DropShadowEffect Color="#F57C00" Direction="270" 
                                                  ShadowDepth="3" Opacity="0.2" BlurRadius="8"/>
                            </Border.Effect>
                            <Image Source="{Binding QRCodeImageBytes, Converter={StaticResource ByteArrayToBitmapConverter}}" 
                                   Stretch="Uniform" Margin="15"/>
                        </Border>

                        <TextBlock Text="{Binding QRCodeUrl}" 
                                  Style="{StaticResource BodySmall}"
                                  Foreground="{DynamicResource OnSurface}" HorizontalAlignment="Center" 
                                  Margin="0,16,0,0" TextAlignment="Center" TextWrapping="Wrap"
                                  FontWeight="Medium"/>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,0">
                            <Button Command="{Binding CopyUrlCommand}" Style="{StaticResource OrangeMobileQuickActionButton}" 
                                    Margin="0,0,8,0">
                                <StackPanel Orientation="Horizontal">
                                    <fa:ImageAwesome Icon="Copy" Width="14" Height="14" 
                                                   Foreground="{DynamicResource Primary}" Margin="0,0,6,0"/>
                                    <TextBlock Text="URL kopieren" FontSize="13" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Command="{Binding OpenInBrowserCommand}" Style="{StaticResource OrangeMobileQuickActionButton}"
                                    Margin="8,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <fa:ImageAwesome Icon="ExternalLink" Width="14" Height="14" 
                                                   Foreground="{DynamicResource Primary}" Margin="0,0,6,0"/>
                                    <TextBlock Text="Browser" FontSize="13" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Connection Info (MVVM Binding) -->
                <Border Style="{StaticResource Card}" Background="{DynamicResource PrimaryContainer}"
                       Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="â„¹ï¸ Verbindungsinfo" Style="{StaticResource TitleSmall}"
                                  Foreground="{DynamicResource OnPrimaryContainer}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding ServerInfo}"
                                  Style="{StaticResource BodySmall}"
                                  Foreground="{DynamicResource OnPrimaryContainer}"
                                  Margin="0,6,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Right Panel - Mobile Status & Actions (MVVM) -->
        <Border Grid.Column="1" Style="{StaticResource OrangeMobileCard}" Margin="10,0,0,0">
            <StackPanel>
                <TextBlock Text="ðŸ“Š Mobile Status" Style="{StaticResource TitleMedium}"
                          Foreground="{DynamicResource OnSurface}" Margin="0,0,0,16" FontWeight="Bold"/>

                <!-- Connected Devices (MVVM) -->
                <Border Style="{StaticResource Card}" Background="{DynamicResource SecondaryContainer}"
                       Margin="0,0,0,16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <fa:ImageAwesome Icon="Users" Width="18" Height="18" 
                                           Foreground="{DynamicResource Primary}" Margin="0,0,8,0"/>
                            <TextBlock Text="Verbundene GerÃ¤te" Style="{StaticResource TitleSmall}"
                                      Foreground="{DynamicResource OnSecondaryContainer}" FontWeight="Bold"/>
                        </StackPanel>
                        <TextBlock Text="{Binding ConnectedDevicesText}"
                                  Style="{StaticResource BodyMedium}"
                                  Foreground="{DynamicResource OnSecondaryContainer}"/>
                    </StackPanel>
                </Border>

                <!-- Server Status Messages (Simplified for now) -->
                <TextBlock Text="ðŸ“‹ Server-Status" Style="{StaticResource TitleSmall}"
                          Foreground="{DynamicResource OnSurface}" Margin="0,0,0,8" FontWeight="Bold"/>
                
                <Border Style="{StaticResource Card}" Background="{DynamicResource SurfaceVariant}" 
                       Margin="0,0,0,16" Padding="12">
                    <TextBlock Text="{Binding StatusText}" 
                              Style="{StaticResource BodyMedium}"
                              Foreground="{DynamicResource OnSurface}"
                              TextWrapping="Wrap"/>
                </Border>

                <!-- Statistics (MVVM) -->
                <TextBlock Text="ðŸ“ˆ Mobile Statistiken" Style="{StaticResource TitleSmall}"
                          Foreground="{DynamicResource OnSurface}" Margin="0,0,0,8" FontWeight="Bold"/>
                
                <UniformGrid Columns="2" Margin="0,0,0,16">
                    <Border Style="{StaticResource Card}" 
                           Margin="0,0,4,0" Padding="18">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#FF7043" Offset="0"/>
                                <GradientStop Color="#F4511E" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel>
                            <TextBlock Text="{Binding TotalViewsValue}" 
                                      Style="{StaticResource DisplayMedium}"
                                      Foreground="White" FontWeight="Bold"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Text="Seitenaufrufe" Style="{StaticResource BodySmall}"
                                      Foreground="White"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Style="{StaticResource Card}" 
                           Margin="4,0,0,0" Padding="18"
                           Background="{DynamicResource Success}">
                        <StackPanel>
                            <TextBlock Text="{Binding ActiveViewersValue}" 
                                      Style="{StaticResource DisplayMedium}"
                                      Foreground="White" FontWeight="Bold"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Text="Aktive Betrachter" Style="{StaticResource BodySmall}"
                                      Foreground="White"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!-- Quick Actions (MVVM Commands) -->
                <TextBlock Text="âš¡ Schnellaktionen" Style="{StaticResource TitleSmall}"
                          Foreground="{DynamicResource OnSurface}" Margin="0,0,0,8" FontWeight="Bold"/>
                
                <StackPanel>
                    <Button Command="{Binding RepairServiceCommand}" Style="{StaticResource OrangeMobileActionButton}">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Wrench" Width="16" Height="16" 
                                           Foreground="White" Margin="0,0,8,0"/>
                            <TextBlock Text="Service reparieren" Foreground="White" FontWeight="Medium"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding TestConnectionCommand}" Style="{StaticResource OrangeMobileSecondaryButton}">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Wifi" Width="16" Height="16" 
                                           Foreground="{DynamicResource Primary}" Margin="0,0,8,0"/>
                            <TextBlock Text="Verbindung testen" Foreground="{DynamicResource Primary}"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding TestAPICommand}" Style="{StaticResource OrangeMobileSecondaryButton}">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Cog" Width="16" Height="16" 
                                           Foreground="{DynamicResource Primary}" Margin="0,0,8,0"/>
                            <TextBlock Text="API Test" Foreground="{DynamicResource Primary}"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding SystemDiagnoseCommand}" Style="{StaticResource OrangeMobileSecondaryButton}">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Stethoscope" Width="16" Height="16" 
                                           Foreground="{DynamicResource Primary}" Margin="0,0,8,0"/>
                            <TextBlock Text="System-Diagnose" Foreground="{DynamicResource Primary}"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding ConfigureNetworkCommand}" Style="{StaticResource OrangeMobileQuickActionButton}">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Shield" Width="16" Height="16" 
                                           Foreground="{DynamicResource Primary}" Margin="0,0,8,0"/>
                            <TextBlock Text="Netzwerk konfigurieren"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding NonAdminHelpCommand}" Style="{StaticResource OrangeMobileQuickActionButton}">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="User" Width="16" Height="16" 
                                           Foreground="{DynamicResource Primary}" Margin="0,0,8,0"/>
                            <TextBlock Text="Ohne Admin-Rechte"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding CleanupNetworkCommand}" Style="{StaticResource OrangeMobileQuickActionButton}">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Trash" Width="16" Height="16" 
                                           Foreground="{DynamicResource Primary}" Margin="0,0,8,0"/>
                            <TextBlock Text="Netzwerk bereinigen"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</views:BaseThemeWindow>
