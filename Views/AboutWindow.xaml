<local:BaseThemeWindow x:Class="Einsatzueberwachung.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:Einsatzueberwachung.Views"
        Title="Über Einsatzüberwachung Professional" 
        Height="700" Width="580"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource Surface}"
        Icon="pack://application:,,,/Resources/app.ico">

    <local:BaseThemeWindow.Resources>
        <!-- Enhanced About window styles -->
        <Style x:Key="AboutCard" TargetType="Border" BasedOn="{StaticResource Card}">
            <Setter Property="Margin" Value="20"/>
            <Setter Property="Padding" Value="32"/>
            <Setter Property="Effect" Value="{StaticResource Elevation3}"/>
        </Style>

        <Style x:Key="AppTitle" TargetType="TextBlock" BasedOn="{StaticResource HeadlineLarge}">
            <Setter Property="Foreground" Value="{DynamicResource Primary}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,16,0,8"/>
        </Style>

        <Style x:Key="AppSubtitle" TargetType="TextBlock" BasedOn="{StaticResource TitleMedium}">
            <Setter Property="Foreground" Value="{DynamicResource OnSurfaceVariant}"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,24"/>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock" BasedOn="{StaticResource TitleMedium}">
            <Setter Property="Foreground" Value="{DynamicResource Primary}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,24,0,12"/>
        </Style>

        <Style x:Key="InfoText" TargetType="TextBlock" BasedOn="{StaticResource BodyMedium}">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="LineHeight" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="FeatureItem" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceVariant}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource OutlineVariant}"/>
        </Style>

        <Style x:Key="ActionCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource PrimaryContainer}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Primary}"/>
            <Setter Property="Effect" Value="{StaticResource Elevation1}"/>
        </Style>

        <Style x:Key="LinkButton" TargetType="Button" BasedOn="{StaticResource TextButton}">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Background" Value="{DynamicResource SecondaryContainer}"/>
            <Setter Property="Foreground" Value="{DynamicResource OnSecondaryContainer}"/>
        </Style>
    </local:BaseThemeWindow.Resources>

    <Border Style="{StaticResource AboutCard}">
        <ScrollViewer VerticalScrollBarVisibility="Auto" PanningMode="VerticalOnly">
            <StackPanel>
                <!-- Enhanced Hero Section -->
                <Border Background="{DynamicResource PrimaryGradient}" 
                       CornerRadius="16" 
                       Padding="24" 
                       Margin="0,0,0,24"
                       Effect="{StaticResource OrangeElevation3}">
                    <StackPanel HorizontalAlignment="Center">
                        <!-- App Logo with animation potential - OPTIMIERTES RUNDES LOGO -->
                        <Border Width="120" Height="120" CornerRadius="60" 
                               Background="{DynamicResource Surface}"
                               HorizontalAlignment="Center"
                               Effect="{StaticResource OrangeGlow}"
                               Margin="0,0,0,16">
                            <Grid>
                                <!-- RUNDER LOGO-BEREICH MIT ELLIPSE -->
                                <Ellipse Width="100" Height="100">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="/Resources/logo.jpeg" 
                                                   Stretch="UniformToFill"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                                
                                <!-- Fallback Icon -->
                                <Border Background="{DynamicResource Primary}" CornerRadius="50" Width="100" Height="100"
                                       Visibility="Collapsed" x:Name="FallbackIcon">
                                    <fa:ImageAwesome Icon="Paw" Width="60" Height="60" 
                                                   Foreground="{DynamicResource OnPrimary}"/>
                                </Border>
                            </Grid>
                        </Border>

                        <TextBlock Text="Einsatzüberwachung" 
                                  Style="{StaticResource HeadlineLarge}"
                                  Foreground="{DynamicResource OnPrimary}"/>
                        <TextBlock Text="Professional Edition" 
                                  Style="{StaticResource TitleLarge}"
                                  Foreground="{DynamicResource OnPrimary}" 
                                  Opacity="0.9"/>
                        
                        <!-- Enhanced Version Badge -->
                        <Border Background="{DynamicResource Surface}" 
                               CornerRadius="16" 
                               Padding="16,8" 
                               Margin="0,16,0,0"
                               Effect="{StaticResource Elevation2}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <fa:ImageAwesome Icon="Tag" Width="16" Height="16" 
                                               Foreground="{DynamicResource Primary}" 
                                               Margin="0,0,8,0"/>
                                <TextBlock x:Name="VersionTextBlock" 
                                          Text="Version 1.9.2" 
                                          Style="{StaticResource LabelLarge}"
                                          Foreground="{DynamicResource Primary}"
                                          FontWeight="Bold"/>
                                <Border Background="{DynamicResource SuccessContainer}"
                                       CornerRadius="8"
                                       Padding="6,3"
                                       Margin="12,0,0,0">
                                    <TextBlock Text="AKTUELL" 
                                              Style="{StaticResource LabelSmall}"
                                              Foreground="{DynamicResource OnSuccessContainer}"
                                              FontWeight="Bold"/>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Key Features Showcase -->
                <TextBlock Text="🚀 Highlights dieser Version" Style="{StaticResource SectionHeader}"/>
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                        <Border Style="{StaticResource FeatureItem}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🧡" FontSize="20" Margin="0,0,8,0"/>
                                <TextBlock Text="Modernes Orange-Design" Style="{StaticResource BodyMedium}"/>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource FeatureItem}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🌓" FontSize="20" Margin="0,0,8,0"/>
                                <TextBlock Text="Auto Dark/Light Mode" Style="{StaticResource BodyMedium}"/>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource FeatureItem}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🏗️" FontSize="20" Margin="0,0,8,0"/>
                                <TextBlock Text="MVVM-Architektur" Style="{StaticResource BodyMedium}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                        <Border Style="{StaticResource FeatureItem}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📱" FontSize="20" Margin="0,0,8,0"/>
                                <TextBlock Text="Mobile-Integration" Style="{StaticResource BodyMedium}"/>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource FeatureItem}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👥" FontSize="20" Margin="0,0,8,0"/>
                                <TextBlock Text="Stammdaten-System" Style="{StaticResource BodyMedium}"/>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource FeatureItem}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚡" FontSize="20" Margin="0,0,8,0"/>
                                <TextBlock Text="Performance-Boost" Style="{StaticResource BodyMedium}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <!-- Description with better formatting -->
                <TextBlock Text="📋 Über die Anwendung" Style="{StaticResource SectionHeader}"/>
                <Border Style="{StaticResource ActionCard}">
                    <TextBlock Style="{StaticResource BodyMedium}"
                              Foreground="{DynamicResource OnPrimaryContainer}"
                              TextWrapping="Wrap"
                              LineHeight="22">
                        Eine professionelle Anwendung zur Überwachung und Verwaltung von Rettungshunde-Teams bei Such- und Rettungseinsätzen.
                        <LineBreak/><LineBreak/>
                        <Bold>Kernfunktionen:</Bold> Timer-Management, Team-Koordination, Einsatzstatistiken, Mobile-Zugriff und eine moderne, benutzerfreundliche Oberfläche mit automatischen Theme-Wechseln.
                    </TextBlock>
                </Border>

                <!-- Enhanced System Requirements -->
                <TextBlock Text="💻 Systemanforderungen" Style="{StaticResource SectionHeader}"/>
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                        <TextBlock Text="Minimum:" Style="{StaticResource LabelMedium}" 
                                  Foreground="{DynamicResource Primary}" 
                                  FontWeight="Bold" Margin="0,0,0,8"/>
                        <TextBlock Style="{StaticResource InfoText}">• Windows 10 (1903+)</TextBlock>
                        <TextBlock Style="{StaticResource InfoText}">• .NET 8 Runtime</TextBlock>
                        <TextBlock Style="{StaticResource InfoText}">• 4 GB RAM</TextBlock>
                        <TextBlock Style="{StaticResource InfoText}">• 500 MB Speicher</TextBlock>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                        <TextBlock Text="Empfohlen:" Style="{StaticResource LabelMedium}" 
                                  Foreground="{DynamicResource Success}" 
                                  FontWeight="Bold" Margin="0,0,0,8"/>
                        <TextBlock Style="{StaticResource InfoText}">• Windows 11</TextBlock>
                        <TextBlock Style="{StaticResource InfoText}">• Admin-Rechte</TextBlock>
                        <TextBlock Style="{StaticResource InfoText}">• 8 GB RAM</TextBlock>
                        <TextBlock Style="{StaticResource InfoText}">• SSD-Speicher</TextBlock>
                    </StackPanel>
                </Grid>

                <!-- Enhanced Technology Stack -->
                <TextBlock Text="🔧 Technologie u. Innovation" Style="{StaticResource SectionHeader}"/>
                <StackPanel Margin="0,0,0,20">
                    <Border Background="{DynamicResource TertiaryContainer}" 
                           CornerRadius="8" 
                           Padding="16" 
                           Margin="0,0,0,8">
                        <StackPanel>
                            <TextBlock Text="Frontend u. UI" 
                                      Style="{StaticResource LabelMedium}"
                                      Foreground="{DynamicResource OnTertiaryContainer}"
                                      FontWeight="Bold"/>
                            <TextBlock Text="• WPF mit .NET 8 und C# 12" Style="{StaticResource BodySmall}" Foreground="{DynamicResource OnTertiaryContainer}"/>
                            <TextBlock Text="• Material Design 3 Komponenten" Style="{StaticResource BodySmall}" Foreground="{DynamicResource OnTertiaryContainer}"/>
                            <TextBlock Text="• MVVM Pattern mit Data Binding" Style="{StaticResource BodySmall}" Foreground="{DynamicResource OnTertiaryContainer}"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="{DynamicResource SecondaryContainer}" 
                           CornerRadius="8" 
                           Padding="16">
                        <StackPanel>
                            <TextBlock Text="Backend u. Services" 
                                      Style="{StaticResource LabelMedium}"
                                      Foreground="{DynamicResource OnSecondaryContainer}"
                                      FontWeight="Bold"/>
                            <TextBlock Text="• ASP.NET Core für Mobile-API" Style="{StaticResource BodySmall}" Foreground="{DynamicResource OnSecondaryContainer}"/>
                            <TextBlock Text="• Automatisches Theming-System" Style="{StaticResource BodySmall}" Foreground="{DynamicResource OnSecondaryContainer}"/>
                            <TextBlock Text="• Performance-optimierte Architektur" Style="{StaticResource BodySmall}" Foreground="{DynamicResource OnSecondaryContainer}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Enhanced Actions Section -->
                <TextBlock Text="🔗 Aktionen u. Support" Style="{StaticResource SectionHeader}"/>
                <StackPanel>
                    <Button Content="🔧 Detaillierte System-Information anzeigen"
                           Style="{StaticResource LinkButton}"
                           Click="ShowSystemInfo_Click"/>
                    <Button Content="🎨 Design-Einstellungen öffnen"
                           Style="{StaticResource LinkButton}"
                           Click="OpenThemeSettings_Click"/>
                    <Button Content="📱 Mobile-Verbindung testen"
                           Style="{StaticResource LinkButton}"
                           Click="TestMobileConnection_Click"/>
                </StackPanel>

                <!-- Enhanced Copyright with additional info -->
                <Border Background="{DynamicResource SurfaceVariant}" 
                       CornerRadius="8" 
                       Padding="16" 
                       Margin="0,24,0,0">
                    <StackPanel>
                        <TextBlock Text="© 2024 Einsatzüberwachung Professional" 
                                  Style="{StaticResource BodyMedium}"
                                  Foreground="{DynamicResource OnSurfaceVariant}"
                                  TextAlignment="Center"
                                  FontWeight="Medium"
                                  Margin="0,0,0,4"/>
                        <TextBlock Text="Entwickelt mit ❤️ für Rettungshunde-Teams" 
                                  Style="{StaticResource BodySmall}"
                                  Foreground="{DynamicResource OnSurfaceVariant}"
                                  TextAlignment="Center"
                                  Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <fa:ImageAwesome Icon="Shield" Width="12" Height="12" 
                                           Foreground="{DynamicResource Success}" 
                                           Margin="0,0,4,0"/>
                            <TextBlock Text="Zuverlässig • Sicher • Professionell" 
                                      Style="{StaticResource LabelSmall}"
                                      Foreground="{DynamicResource Success}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Enhanced Close Button -->
                <Button Content="Schließen" 
                       Style="{StaticResource FilledButton}"
                       Click="CloseButton_Click"
                       HorizontalAlignment="Center"
                       Padding="40,14" 
                       Margin="0,24,0,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{DynamicResource Primary}" 
                                    CornerRadius="24"
                                    Effect="{StaticResource Elevation2}"
                                    Padding="{TemplateBinding Padding}">
                                <StackPanel Orientation="Horizontal" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center">
                                    <fa:ImageAwesome Icon="Check" Width="18" Height="18" 
                                                   Foreground="{DynamicResource OnPrimary}" 
                                                   Margin="0,0,10,0"/>
                                    <ContentPresenter Content="{TemplateBinding Content}"
                                                    TextElement.Foreground="{DynamicResource OnPrimary}"
                                                    TextElement.FontWeight="SemiBold"
                                                    TextElement.FontSize="16"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Effect" Value="{StaticResource OrangeElevation3}"/>
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource Tertiary}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Effect" Value="{StaticResource Elevation1}"/>
                                    <Setter Property="Opacity" Value="0.88"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </ScrollViewer>
    </Border>
</local:BaseThemeWindow>
