<Window x:Class="Einsatzueberwachung.Views.MasterDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:vm="clr-namespace:Einsatzueberwachung.ViewModels"
        Title="Stammdaten - Personal &amp; Hunde"
        Height="700" Width="1100"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource Surface}"
        ResizeMode="CanResize">

    <Window.DataContext>
        <vm:MasterDataViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <!-- Orange Card Style -->
        <Style x:Key="OrangeCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceContainer}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Primary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="{DynamicResource Primary}" 
                                     ShadowDepth="0" BlurRadius="8" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Orange Button Style -->
        <Style x:Key="OrangeButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Primary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource PrimaryVariant}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{DynamicResource OutlineVariant}"/>
                    <Setter Property="Foreground" Value="{DynamicResource OnSurfaceVariant}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Orange DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="Foreground" Value="{DynamicResource OnSurface}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource OutlineVariant}"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{DynamicResource Primary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource OnSurface}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource PrimaryContainer}"/>
                    <Setter Property="Foreground" Value="{DynamicResource OnPrimaryContainer}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="{DynamicResource SurfaceContainer}"/>
            <Setter Property="Foreground" Value="{DynamicResource OnSurface}"/>
            <Style.Triggers>
                <Trigger Property="AlternationIndex" Value="1">
                    <Setter Property="Background" Value="{DynamicResource SurfaceVariant}"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource PrimaryContainer}"/>
                    <Setter Property="Foreground" Value="{DynamicResource OnPrimaryContainer}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SurfaceContainerHighest}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Orange Tab Style -->
        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="{DynamicResource OnSurface}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,8"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Foreground" Value="{DynamicResource Primary}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Orange Header mit Gradient -->
        <Border Grid.Row="0" Margin="0,0,0,8" Padding="20" CornerRadius="12"
                Background="{DynamicResource PrimaryGradient}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <fa:ImageAwesome Grid.Column="0" Icon="Database" Width="32" Height="32" 
                                Foreground="White" VerticalAlignment="Center"
                                Effect="{DynamicResource OrangeGlow}"/>

                <StackPanel Grid.Column="1" Margin="16,0" VerticalAlignment="Center">
                    <TextBlock Text="Stammdatenverwaltung" FontSize="24" FontWeight="Bold" 
                              Foreground="White"/>
                    <TextBlock Text="Verwalten Sie Personal und Hunde für schnellere Einsatzerfassung" 
                              FontSize="12" Foreground="White" Opacity="0.9" Margin="0,4,0,0"/>
                </StackPanel>

                <Button Grid.Column="2" Content="Schließen" 
                       Command="{Binding CloseCommand}"
                       CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                       Style="{StaticResource OrangeAccentButton}" Padding="20,8"/>
            </Grid>
        </Border>

        <!-- Main Content - TabControl -->
        <TabControl Grid.Row="1" BorderThickness="0" Background="Transparent">
            <!-- Personal Tab -->
            <TabItem Header="👤 Personal">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Personal Toolbar -->
                    <Border Grid.Row="0" Style="{StaticResource OrangeCard}" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="➕ Neu" Command="{Binding AddPersonalCommand}"
                                   Style="{StaticResource OrangeButtonStyle}" Margin="0,0,8,0"/>
                            <Button Content="✏️ Bearbeiten" Command="{Binding EditPersonalCommand}"
                                   Style="{StaticResource OrangeButtonStyle}" Margin="0,0,8,0"/>
                            <Button Content="🗑️ Löschen" Command="{Binding DeletePersonalCommand}"
                                   Style="{StaticResource OrangeButtonStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- Personal List -->
                    <Border Grid.Row="1" Style="{StaticResource OrangeCard}">
                        <DataGrid ItemsSource="{Binding PersonalList}"
                                 SelectedItem="{Binding SelectedPersonal}"
                                 AutoGenerateColumns="False" 
                                 SelectionMode="Single"
                                 CanUserAddRows="False"
                                 CanUserDeleteRows="False"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 GridLinesVisibility="Horizontal"
                                 RowBackground="{DynamicResource SurfaceContainer}"
                                 AlternatingRowBackground="{DynamicResource SurfaceVariant}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Vorname" Binding="{Binding Vorname}" Width="150"/>
                                <DataGridTextColumn Header="Nachname" Binding="{Binding Nachname}" Width="150"/>
                                <DataGridTextColumn Header="Fähigkeiten" Binding="{Binding SkillsDisplay}" Width="*"/>
                                <DataGridTextColumn Header="Kürzel" Binding="{Binding SkillsShortDisplay}" Width="100"/>
                                <DataGridCheckBoxColumn Header="Aktiv" Binding="{Binding IsActive}" Width="60"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Hunde Tab -->
            <TabItem Header="🐕 Hunde">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Dogs Toolbar -->
                    <Border Grid.Row="0" Style="{StaticResource OrangeCard}" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="➕ Neu" Command="{Binding AddDogCommand}"
                                   Style="{StaticResource OrangeButtonStyle}" Margin="0,0,8,0"/>
                            <Button Content="✏️ Bearbeiten" Command="{Binding EditDogCommand}"
                                   Style="{StaticResource OrangeButtonStyle}" Margin="0,0,8,0"/>
                            <Button Content="🗑️ Löschen" Command="{Binding DeleteDogCommand}"
                                   Style="{StaticResource OrangeButtonStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- Dogs List -->
                    <Border Grid.Row="1" Style="{StaticResource OrangeCard}">
                        <DataGrid ItemsSource="{Binding DogList}"
                                 SelectedItem="{Binding SelectedDog}"
                                 AutoGenerateColumns="False" 
                                 SelectionMode="Single"
                                 CanUserAddRows="False"
                                 CanUserDeleteRows="False"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 GridLinesVisibility="Horizontal"
                                 RowBackground="{DynamicResource SurfaceContainer}"
                                 AlternatingRowBackground="{DynamicResource SurfaceVariant}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                                <DataGridTextColumn Header="Rasse" Binding="{Binding Rasse}" Width="120"/>
                                <DataGridTextColumn Header="Alter" Binding="{Binding Alter}" Width="60"/>
                                <DataGridTextColumn Header="Spezialisierungen" Binding="{Binding SpecializationsDisplay}" Width="*"/>
                                <DataGridTextColumn Header="Kürzel" Binding="{Binding SpecializationsShortDisplay}" Width="100"/>
                                <DataGridCheckBoxColumn Header="Aktiv" Binding="{Binding IsActive}" Width="60"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Statistik Tab -->
            <TabItem Header="📊 Übersicht">
                <Border Style="{StaticResource OrangeCard}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="16">
                            <TextBlock Text="Stammdaten-Statistik" FontSize="20" FontWeight="Bold" 
                                      Foreground="{DynamicResource OnSurface}" Margin="0,0,0,16"/>

                            <!-- Personal Statistics -->
                            <Border Background="{DynamicResource PrimaryContainer}" 
                                   CornerRadius="8" Padding="16" Margin="0,0,0,16"
                                   Effect="{DynamicResource OrangeElevation2}">
                                <StackPanel>
                                    <TextBlock Text="👤 Personal" FontSize="16" FontWeight="SemiBold" 
                                              Foreground="{DynamicResource OnPrimaryContainer}"/>
                                    <TextBlock Text="{Binding PersonalStatsText}" FontSize="14" 
                                              Foreground="{DynamicResource OnPrimaryContainer}" 
                                              Margin="0,8,0,0" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <!-- Dog Statistics -->
                            <Border Background="{DynamicResource SuccessContainer}" 
                                   CornerRadius="8" Padding="16"
                                   Effect="{DynamicResource OrangeElevation2}">
                                <StackPanel>
                                    <TextBlock Text="🐕 Hunde" FontSize="16" FontWeight="SemiBold" 
                                              Foreground="{DynamicResource OnSuccessContainer}"/>
                                    <TextBlock Text="{Binding DogStatsText}" FontSize="14" 
                                              Foreground="{DynamicResource OnSuccessContainer}" 
                                              Margin="0,8,0,0" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </TabItem>
        </TabControl>

        <!-- Footer -->
        <Border Grid.Row="2" Style="{StaticResource OrangeCard}" Margin="0,8,0,0">
            <Grid>
                <TextBlock Text="{Binding StatusText}" 
                          Foreground="{DynamicResource OnSurfaceVariant}" 
                          VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="{Binding PersonalCountText}" 
                              Foreground="{DynamicResource Primary}" FontWeight="SemiBold" Margin="0,0,8,0"/>
                    <TextBlock Text=" | " Foreground="{DynamicResource OnSurfaceVariant}"/>
                    <TextBlock Text="{Binding DogCountText}" 
                              Foreground="{DynamicResource Primary}" FontWeight="SemiBold" Margin="8,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
