<Window x:Class="Einsatzueberwachung.Views.TeamInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:Einsatzueberwachung.Views"
        Title="Team-Details eingeben - v1.9.0" Height="740" Width="480"
        WindowStartupLocation="CenterOwner"
        Icon="pack://application:,,,/Resources/app.ico"
        ResizeMode="NoResize"
        Background="{DynamicResource SurfaceContainer}">

    <Window.Resources>
        <!-- ComboBox Style für Orange-Design -->
        <Style x:Key="MasterDataComboBox" TargetType="ComboBox" BasedOn="{StaticResource ComboBoxStyle}">
            <Setter Property="Height" Value="40"/>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 🧡 Header Section - Orange-Design -->
        <Border Grid.Row="0" Style="{StaticResource Card}" 
               Margin="0,0,0,20">
            <Border.Background>
                <DynamicResource ResourceKey="PrimaryGradient"/> <!-- Orange Gradient! -->
            </Border.Background>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Icon mit Orange Glow -->
                <Border Width="56" Height="56" CornerRadius="28" 
                       Background="White" Opacity="0.95" Margin="0,0,16,0"
                       Effect="{StaticResource OrangeElevation2}">
                    <fa:ImageAwesome Icon="UserPlus" Width="28" Height="28" 
                                   Foreground="{DynamicResource Primary}"/>
                </Border>
                
                <!-- Title -->
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Neues Team erstellen" Style="{StaticResource HeadlineSmall}"
                              Foreground="White"/>
                    <TextBlock Text="Team-Details eingeben (mit Stammdaten)" Style="{StaticResource BodyMedium}"
                              Foreground="White" Opacity="0.9"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 💡 Information Panel - Orange-Akzent -->
        <Border Grid.Row="1" Style="{StaticResource OrangeCard}" Margin="0,0,0,20">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <fa:ImageAwesome Icon="InfoCircle" Width="16" Height="16" 
                                   Foreground="{DynamicResource Primary}" Margin="0,0,8,0"/>
                    <TextBlock Text="Teamname" Style="{StaticResource TitleSmall}"
                              Foreground="{DynamicResource OnTertiaryContainer}"/>
                </StackPanel>
                
                <TextBlock TextWrapping="Wrap" Style="{StaticResource BodySmall}"
                          Foreground="{DynamicResource OnTertiaryContainer}" LineHeight="18">
                    <Run Text="Der Teamname wird automatisch als"/>
                    <Run Text="'Team [Hundename]'" FontWeight="Bold"/>
                    <Run Text="generiert. Wählen Sie aus Stammdaten oder geben Sie manuell ein."/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- 📝 Input Form mit MVVM-Bindings -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Hundename (Required) - MVVM Binding -->
                <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <fa:ImageAwesome Icon="Paw" Width="16" Height="16" 
                                           Foreground="{DynamicResource Primary}" Margin="0,0,8,0"/>
                            <TextBlock Text="Hund *" Style="{StaticResource TitleSmall}"
                                      Foreground="{DynamicResource OnSurface}"/>
                        </StackPanel>
                        
                        <ComboBox ItemsSource="{Binding HundeList}"
                                 SelectedItem="{Binding SelectedDog}"
                                 Style="{StaticResource MasterDataComboBox}"
                                 IsEditable="True"
                                 Text="{Binding HundName, UpdateSourceTrigger=PropertyChanged}"
                                 DisplayMemberPath="Name"
                                 Margin="0,0,0,8"/>
                        
                        <!-- Preview mit MVVM-Binding -->
                        <TextBlock Text="{Binding TeamNamePreview}" 
                                  Style="{StaticResource BodySmall}"
                                  Foreground="{DynamicResource OnSurfaceVariant}" 
                                  Margin="0,8,0,0"
                                  FontStyle="Italic"/>
                    </StackPanel>
                </Border>

                <!-- Hundeführer - MVVM Binding -->
                <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <fa:ImageAwesome Icon="User" Width="16" Height="16" 
                                           Foreground="{DynamicResource Primary}" Margin="0,0,8,0"/>
                            <TextBlock Text="Hundeführer" Style="{StaticResource TitleSmall}"
                                      Foreground="{DynamicResource OnSurface}"/>
                        </StackPanel>
                        
                        <ComboBox ItemsSource="{Binding HundefuehrerList}"
                                 SelectedItem="{Binding SelectedHundefuehrer}"
                                 Style="{StaticResource MasterDataComboBox}"
                                 IsEditable="True"
                                 Text="{Binding Hundefuehrer, UpdateSourceTrigger=PropertyChanged}"
                                 DisplayMemberPath="FullName"/>
                    </StackPanel>
                </Border>

                <!-- Helfer - MVVM Binding -->
                <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <fa:ImageAwesome Icon="Users" Width="16" Height="16" 
                                           Foreground="{DynamicResource Primary}" Margin="0,0,8,0"/>
                            <TextBlock Text="Helfer (optional)" Style="{StaticResource TitleSmall}"
                                      Foreground="{DynamicResource OnSurface}"/>
                        </StackPanel>
                        
                        <ComboBox ItemsSource="{Binding HelferList}"
                                 SelectedItem="{Binding SelectedHelfer}"
                                 Style="{StaticResource MasterDataComboBox}"
                                 IsEditable="True"
                                 Text="{Binding Helfer, UpdateSourceTrigger=PropertyChanged}"
                                 DisplayMemberPath="FullName"/>
                    </StackPanel>
                </Border>

                <!-- Suchgebiet - MVVM Binding -->
                <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <fa:ImageAwesome Icon="MapMarker" Width="16" Height="16" 
                                           Foreground="{DynamicResource Primary}" Margin="0,0,8,0"/>
                            <TextBlock Text="Suchgebiet (optional)" Style="{StaticResource TitleSmall}"
                                      Foreground="{DynamicResource OnSurface}"/>
                        </StackPanel>
                        
                        <TextBox Text="{Binding Suchgebiet, UpdateSourceTrigger=PropertyChanged}" 
                                Style="{StaticResource TextField}"
                                ToolTip="Zugewiesenes Suchgebiet (z.B. Sektor A, Waldstück Nord, etc.)"/>
                    </StackPanel>
                </Border>

                <!-- Spezialisierung Info - MVVM Binding -->
                <Border Style="{StaticResource Card}" Margin="0,0,0,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <fa:ImageAwesome Icon="Star" Width="16" Height="16" 
                                           Foreground="{DynamicResource Primary}" Margin="0,0,8,0"/>
                            <TextBlock Text="Team-Spezialisierung" Style="{StaticResource TitleSmall}"
                                      Foreground="{DynamicResource OnSurface}"/>
                        </StackPanel>
                        
                        <TextBlock Text="{Binding SelectedSpecializationText}" 
                                  Style="{StaticResource BodyMedium}"
                                  Foreground="{Binding SpecializationTextColor}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- 🎬 Action Buttons - Orange-Design -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" 
                   Margin="0,20,0,0">
            <Button Content="Abbrechen" Command="{Binding CancelCommand}" 
                   Style="{StaticResource OutlinedButton}" Margin="0,0,12,0"/>
               
            <Button Command="{Binding NextCommand}" 
                   Style="{StaticResource OrangeAccentButton}" 
                   Margin="12,0,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Team erstellen" Foreground="White"/>
                    <fa:ImageAwesome Icon="Check" Width="14" Height="14" 
                                   Foreground="White" Margin="8,0,0,0"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
