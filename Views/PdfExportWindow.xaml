<Window x:Class="Einsatzueberwachung.Views.PdfExportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:vm="clr-namespace:Einsatzueberwachung.ViewModels"
        Title="{Binding WindowTitle}"
        Height="750" Width="650"
        Background="{DynamicResource Surface}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <!-- DataContext wird Ã¼ber Code-Behind gesetzt -->

    <Window.Resources>
        <!-- Orange PDF Export Styles -->
        
        <!-- Orange Export Card Style -->
        <Style x:Key="OrangePdfExportCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceContainer}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Primary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,12,0,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="{DynamicResource Primary}" 
                                     ShadowDepth="0" BlurRadius="8" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Orange Section Header Style -->
        <Style x:Key="OrangePdfSectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource Primary}"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Orange Label Style -->
        <Style x:Key="OrangePdfLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource Primary}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- Orange Input TextBox Style -->
        <Style x:Key="OrangePdfInputTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource SurfaceVariant}"/>
            <Setter Property="Foreground" Value="{DynamicResource OnSurface}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Primary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                         VerticalScrollBarVisibility="Hidden" 
                                         HorizontalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryVariant}"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="{DynamicResource Primary}" 
                                                         ShadowDepth="0" BlurRadius="4" Opacity="0.2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="{DynamicResource OutlineVariant}"/>
                                <Setter Property="Foreground" Value="{DynamicResource OnSurfaceVariant}"/>
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Orange DatePicker Style -->
        <Style x:Key="OrangePdfDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="{DynamicResource SurfaceVariant}"/>
            <Setter Property="Foreground" Value="{DynamicResource OnSurface}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Primary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="38"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{DynamicResource OutlineVariant}"/>
                    <Setter Property="Foreground" Value="{DynamicResource OnSurfaceVariant}"/>
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Orange CheckBox Style -->
        <Style x:Key="OrangePdfCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource OnSurface}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border Width="20" Height="20" 
                                   Background="{DynamicResource SurfaceVariant}"
                                   BorderBrush="{DynamicResource Primary}"
                                   BorderThickness="2"
                                   CornerRadius="4"
                                   Margin="0,0,10,0">
                                <fa:ImageAwesome x:Name="CheckIcon"
                                               Icon="Check" 
                                               Width="12" Height="12"
                                               Foreground="{DynamicResource Primary}"
                                               Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckIcon" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="{DynamicResource Primary}" 
                                                         ShadowDepth="0" BlurRadius="4" Opacity="0.2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Orange Browse Button Style -->
        <Style x:Key="OrangePdfBrowseButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Primary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource PrimaryVariant}"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="{DynamicResource Primary}" 
                                             ShadowDepth="0" BlurRadius="6" Opacity="0.3"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{DynamicResource OutlineVariant}"/>
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Orange Export Button Style -->
        <Style x:Key="OrangePdfExportButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Success}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Primary}"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="{DynamicResource Primary}" 
                                             ShadowDepth="0" BlurRadius="8" Opacity="0.4"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{DynamicResource OutlineVariant}"/>
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Orange Cancel Button Style -->
        <Style x:Key="OrangePdfCancelButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SurfaceVariant}"/>
            <Setter Property="Foreground" Value="{DynamicResource OnSurface}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Primary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="130"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Primary}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Orange Header -->
        <Border Grid.Row="0" CornerRadius="12" Padding="24" Margin="0,0,0,10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{DynamicResource PrimaryColor}" Offset="0"/>
                    <GradientStop Color="{DynamicResource PrimaryVariantColor}" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel Orientation="Horizontal">
                <Border Width="48" Height="48" CornerRadius="24" 
                       Background="White" Opacity="0.95" Margin="0,0,16,0"
                       Effect="{DynamicResource OrangeGlow}">
                    <fa:ImageAwesome Icon="FilePdfOutline" Width="24" Height="24" 
                                   Foreground="{DynamicResource Primary}"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“„ PDF-Export" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="WÃ¤hlen Sie die Informationen fÃ¼r Ihr PDF-Dokument" 
                               FontSize="13" 
                               Foreground="White"
                               Opacity="0.9"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Orange Content Area -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Margin="0,10,0,0">
            <StackPanel>
                
                <!-- Einsatznummer Card -->
                <Border Style="{StaticResource OrangePdfExportCard}">
                    <StackPanel>
                        <CheckBox IsChecked="{Binding IncludeEinsatzNummer}"
                                  Style="{StaticResource OrangePdfCheckBox}">
                            <StackPanel Orientation="Horizontal">
                                <fa:ImageAwesome Icon="FileText" Width="16" Height="16" 
                                               Foreground="{DynamicResource Primary}" 
                                               Margin="0,0,8,0"
                                               Effect="{DynamicResource OrangeGlow}"/>
                                <TextBlock Text="Einsatznummer"/>
                            </StackPanel>
                        </CheckBox>
                        
                        <TextBlock Text="Interne Einsatznummer / Aktenzeichen" 
                                   Style="{StaticResource OrangePdfLabel}"/>
                        <TextBox Text="{Binding EinsatzNummer, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource OrangePdfInputTextBox}"
                                 IsEnabled="{Binding IncludeEinsatzNummer}"/>
                    </StackPanel>
                </Border>

                <!-- Alarmierende Organisation Card -->
                <Border Style="{StaticResource OrangePdfExportCard}">
                    <StackPanel>
                        <CheckBox IsChecked="{Binding IncludeAlarmierendeOrg}"
                                  Style="{StaticResource OrangePdfCheckBox}">
                            <StackPanel Orientation="Horizontal">
                                <fa:ImageAwesome Icon="Shield" Width="16" Height="16" 
                                               Foreground="{DynamicResource Primary}" 
                                               Margin="0,0,8,0"
                                               Effect="{DynamicResource OrangeGlow}"/>
                                <TextBlock Text="Alarmierende Organisation"/>
                            </StackPanel>
                        </CheckBox>
                        
                        <TextBlock Text="Z.B. Polizei, Feuerwehr, THW" 
                                   Style="{StaticResource OrangePdfLabel}"/>
                        <TextBox Text="{Binding AlarmierendeOrganisation, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource OrangePdfInputTextBox}"
                                 IsEnabled="{Binding IncludeAlarmierendeOrg}"/>
                    </StackPanel>
                </Border>

                <!-- Staffelname Card -->
                <Border Style="{StaticResource OrangePdfExportCard}">
                    <StackPanel>
                        <CheckBox IsChecked="{Binding IncludeStaffelName}"
                                  Style="{StaticResource OrangePdfCheckBox}">
                            <StackPanel Orientation="Horizontal">
                                <fa:ImageAwesome Icon="Users" Width="16" Height="16" 
                                               Foreground="{DynamicResource Primary}" 
                                               Margin="0,0,8,0"
                                               Effect="{DynamicResource OrangeGlow}"/>
                                <TextBlock Text="Staffelname"/>
                            </StackPanel>
                        </CheckBox>
                        
                        <TextBlock Text="Name Ihrer Rettungshunde-Staffel" 
                                   Style="{StaticResource OrangePdfLabel}"/>
                        <TextBox Text="{Binding StaffelName, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource OrangePdfInputTextBox}"
                                 IsEnabled="{Binding IncludeStaffelName}"/>
                    </StackPanel>
                </Border>

                <!-- Logo Card -->
                <Border Style="{StaticResource OrangePdfExportCard}">
                    <StackPanel>
                        <CheckBox IsChecked="{Binding IncludeLogo}"
                                  Style="{StaticResource OrangePdfCheckBox}">
                            <StackPanel Orientation="Horizontal">
                                <fa:ImageAwesome Icon="Image" Width="16" Height="16" 
                                               Foreground="{DynamicResource Primary}" 
                                               Margin="0,0,8,0"
                                               Effect="{DynamicResource OrangeGlow}"/>
                                <TextBlock Text="Staffel-Logo"/>
                            </StackPanel>
                        </CheckBox>
                        
                        <TextBlock Text="Logo-Datei auswÃ¤hlen (PNG, JPG)" 
                                   Style="{StaticResource OrangePdfLabel}"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0"
                                     Text="{Binding LogoPath}"
                                     Style="{StaticResource OrangePdfInputTextBox}"
                                     IsReadOnly="True"
                                     IsEnabled="{Binding IncludeLogo}"/>
                            
                            <Button Grid.Column="1"
                                    Command="{Binding SelectLogoCommand}"
                                    Style="{StaticResource OrangePdfBrowseButton}"
                                    Margin="12,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <fa:ImageAwesome Icon="FolderOpen" Width="14" Height="14" 
                                                   Margin="0,0,6,0" Foreground="White"/>
                                    <TextBlock Text="Durchsuchen"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Logo-Vorschau -->
                        <Border Visibility="{Binding LogoPreviewVisibility}"
                               Background="{DynamicResource SurfaceVariant}"
                               CornerRadius="8"
                               Padding="12"
                               Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="Vorschau:" 
                                          Style="{StaticResource OrangePdfLabel}"
                                          Margin="0,0,0,8"/>
                                <Image Source="{Binding LogoPreview}"
                                       MaxHeight="100"
                                       MaxWidth="250"
                                       HorizontalAlignment="Left"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Alarmierungszeit Card -->
                <Border Style="{StaticResource OrangePdfExportCard}">
                    <StackPanel>
                        <CheckBox IsChecked="{Binding IncludeAlarmierungsZeit}"
                                  Style="{StaticResource OrangePdfCheckBox}">
                            <StackPanel Orientation="Horizontal">
                                <fa:ImageAwesome Icon="ClockOutline" Width="16" Height="16" 
                                               Foreground="{DynamicResource Primary}" 
                                               Margin="0,0,8,0"
                                               Effect="{DynamicResource OrangeGlow}"/>
                                <TextBlock Text="Alarmierungszeit"/>
                            </StackPanel>
                        </CheckBox>
                        
                        <TextBlock Text="Wann wurde alarmiert?" 
                                   Style="{StaticResource OrangePdfLabel}"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>
                            
                            <DatePicker Grid.Column="0"
                                        SelectedDate="{Binding AlarmierungsDatum}"
                                        Style="{StaticResource OrangePdfDatePicker}"
                                        IsEnabled="{Binding IncludeAlarmierungsZeit}"/>
                            
                            <TextBox Grid.Column="2"
                                     Text="{Binding AlarmierungsZeit, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource OrangePdfInputTextBox}"
                                     IsEnabled="{Binding IncludeAlarmierungsZeit}"
                                     ToolTip="Format: HH:mm"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Einsatz-Chronologie Card -->
                <Border Style="{StaticResource OrangePdfExportCard}">
                    <StackPanel>
                        <CheckBox IsChecked="{Binding IncludeTimeline}"
                                  Style="{StaticResource OrangePdfCheckBox}">
                            <StackPanel Orientation="Horizontal">
                                <fa:ImageAwesome Icon="Timeline" Width="16" Height="16" 
                                               Foreground="{DynamicResource Primary}" 
                                               Margin="0,0,8,0"
                                               Effect="{DynamicResource OrangeGlow}"/>
                                <TextBlock Text="Einsatz-Chronologie einschlieÃŸen"/>
                            </StackPanel>
                        </CheckBox>
                        <TextBlock Text="Zeitleiste aller Ereignisse und Notizen" 
                                   Style="{StaticResource OrangePdfLabel}"
                                   Margin="0,0,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Progress Indicator for Export -->
                <Border Style="{StaticResource OrangePdfExportCard}"
                       Visibility="{Binding IsExporting, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <fa:ImageAwesome Icon="Spinner" 
                                       Width="20" Height="20" 
                                       Foreground="{DynamicResource Primary}"
                                       Margin="0,0,12,0">
                            <fa:ImageAwesome.RenderTransform>
                                <RotateTransform x:Name="SpinnerRotate"/>
                            </fa:ImageAwesome.RenderTransform>
                            <fa:ImageAwesome.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="SpinnerRotate"
                                                           Storyboard.TargetProperty="Angle"
                                                           From="0" To="360" Duration="0:0:1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </fa:ImageAwesome.Triggers>
                        </fa:ImageAwesome>
                        <TextBlock Text="PDF wird erstellt..." 
                                  FontSize="14" FontWeight="SemiBold"
                                  Foreground="{DynamicResource Primary}"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Orange Footer Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            
            <Button Command="{Binding CancelCommand}"
                    Style="{StaticResource OrangePdfCancelButton}"
                    Margin="0,0,12,0">
                <StackPanel Orientation="Horizontal">
                    <fa:ImageAwesome Icon="Times" Width="14" Height="14" 
                                   Margin="0,0,6,0"/>
                    <TextBlock Text="Abbrechen"/>
                </StackPanel>
            </Button>
            
            <Button Command="{Binding ExportPdfCommand}"
                    Style="{StaticResource OrangePdfExportButton}">
                <StackPanel Orientation="Horizontal">
                    <fa:ImageAwesome Icon="FilePdfOutline" Width="16" Height="16" 
                                   Margin="0,0,8,0" Foreground="White"/>
                    <TextBlock Text="PDF erstellen"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
