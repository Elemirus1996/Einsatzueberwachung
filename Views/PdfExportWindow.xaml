<views:BaseThemeWindow x:Class="Einsatzueberwachung.Views.PdfExportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Einsatzueberwachung.ViewModels"
        xmlns:views="clr-namespace:Einsatzueberwachung.Views"
        Title="{Binding WindowTitle}"
        Height="750" Width="650"
        Background="{DynamicResource Surface}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <!-- DataContext wird über Code-Behind gesetzt -->

    <views:BaseThemeWindow.Resources>
        <!-- Orange PDF Export Styles -->
        
        <!-- Orange Export Card Style -->
        <Style x:Key="OrangePdfExportCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceContainer}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Primary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,12,0,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" 
                                     ShadowDepth="0" BlurRadius="8" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Orange Section Header Style -->
        <Style x:Key="OrangePdfSectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource Primary}"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Orange Label Style -->
        <Style x:Key="OrangePdfLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource Primary}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- Orange Input TextBox Style - FIXED for proper text display -->
        <Style x:Key="OrangePdfInputTextBox" TargetType="TextBox" BasedOn="{StaticResource EnhancedTextField}">
            <Setter Property="Background" Value="{DynamicResource SurfaceVariant}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Padding" Value="12,12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="TextWrapping" Value="NoWrap"/>
            <Setter Property="AcceptsReturn" Value="False"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
        </Style>

        <!-- Orange DatePicker Style - SIMPLIFIED -->
        <Style x:Key="OrangePdfDatePicker" TargetType="DatePicker">
            <Setter Property="Background" Value="{DynamicResource SurfaceVariant}"/>
            <Setter Property="Foreground" Value="{DynamicResource OnSurface}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Primary}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="38"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{DynamicResource Primary}"/>
                    <Setter Property="BorderThickness" Value="3"/>
                    <Setter Property="Background" Value="{DynamicResource SurfaceVariant}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{DynamicResource Primary}"/>
                    <Setter Property="Background" Value="{DynamicResource SurfaceVariant}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Orange CheckBox Style - OHNE FontAwesome -->
        <Style x:Key="OrangePdfCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource OnSurface}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border Width="20" Height="20" 
                                   Background="{DynamicResource SurfaceVariant}"
                                   BorderBrush="{DynamicResource Primary}"
                                   BorderThickness="2"
                                   CornerRadius="4"
                                   Margin="0,0,10,0">
                                <TextBlock x:Name="CheckIcon"
                                          Text="✓" 
                                          FontSize="14" FontWeight="Bold"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"
                                          Foreground="{DynamicResource Primary}"
                                          Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckIcon" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Orange" 
                                                         ShadowDepth="0" BlurRadius="4" Opacity="0.2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Orange Browse Button Style -->
        <Style x:Key="OrangePdfBrowseButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Primary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Tertiary}"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Orange" 
                                             ShadowDepth="0" BlurRadius="6" Opacity="0.3"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{DynamicResource OutlineVariant}"/>
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Orange Export Button Style -->
        <Style x:Key="OrangePdfExportButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Success}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Primary}"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Orange" 
                                             ShadowDepth="0" BlurRadius="8" Opacity="0.4"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{DynamicResource OutlineVariant}"/>
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Orange Cancel Button Style -->
        <Style x:Key="OrangePdfCancelButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SurfaceVariant}"/>
            <Setter Property="Foreground" Value="{DynamicResource OnSurface}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Primary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="130"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Primary}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </views:BaseThemeWindow.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Orange Header -->
        <Border Grid.Row="0" CornerRadius="12" Padding="24" Margin="0,0,0,10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="Orange" Offset="0"/>
                    <GradientStop Color="DarkOrange" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel Orientation="Horizontal">
                <Border Width="48" Height="48" CornerRadius="24" 
                       Background="White" Opacity="0.95" Margin="0,0,16,0">
                    <Border.Effect>
                        <DropShadowEffect Color="Orange" ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                    </Border.Effect>
                    <!-- Verwende Unicode-Symbol statt FontAwesome -->
                    <TextBlock Text="📄" FontSize="24" 
                              HorizontalAlignment="Center" VerticalAlignment="Center"
                              Foreground="{DynamicResource Primary}"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="📄 PDF-Export" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Wählen Sie die Informationen für Ihr PDF-Dokument" 
                               FontSize="13" 
                               Foreground="White"
                               Opacity="0.9"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Orange Content Area -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Margin="0,10,0,0">
            <StackPanel>
                
                <!-- Einsatznummer Card -->
                <Border Style="{StaticResource OrangePdfExportCard}">
                    <StackPanel>
                        <CheckBox IsChecked="{Binding IncludeEinsatzNummer}"
                                  Style="{StaticResource OrangePdfCheckBox}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📋" Width="16" 
                                          FontSize="12" VerticalAlignment="Center"
                                          Foreground="{DynamicResource Primary}" 
                                          Margin="0,0,8,0"/>
                                <TextBlock Text="Einsatznummer"/>
                            </StackPanel>
                        </CheckBox>
                        
                        <TextBlock Text="Interne Einsatznummer / Aktenzeichen" 
                                   Style="{StaticResource OrangePdfLabel}"/>
                        <TextBox Text="{Binding EinsatzNummer, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource OrangePdfInputTextBox}"
                                 IsEnabled="{Binding IncludeEinsatzNummer}"/>
                    </StackPanel>
                </Border>

                <!-- Alarmierende Organisation Card -->
                <Border Style="{StaticResource OrangePdfExportCard}">
                    <StackPanel>
                        <CheckBox IsChecked="{Binding IncludeAlarmierendeOrg}"
                                  Style="{StaticResource OrangePdfCheckBox}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🛡️" Width="16" 
                                          FontSize="12" VerticalAlignment="Center"
                                          Foreground="{DynamicResource Primary}" 
                                          Margin="0,0,8,0"/>
                                <TextBlock Text="Alarmierende Organisation"/>
                            </StackPanel>
                        </CheckBox>
                        
                        <TextBlock Text="Z.B. Polizei, Feuerwehr, THW" 
                                   Style="{StaticResource OrangePdfLabel}"/>
                        <TextBox Text="{Binding AlarmierendeOrganisation, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource OrangePdfInputTextBox}"
                                 IsEnabled="{Binding IncludeAlarmierendeOrg}"/>
                    </StackPanel>
                </Border>

                <!-- Staffelname Card -->
                <Border Style="{StaticResource OrangePdfExportCard}">
                    <StackPanel>
                        <CheckBox IsChecked="{Binding IncludeStaffelName}"
                                  Style="{StaticResource OrangePdfCheckBox}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👥" Width="16" 
                                          FontSize="12" VerticalAlignment="Center"
                                          Foreground="{DynamicResource Primary}" 
                                          Margin="0,0,8,0"/>
                                <TextBlock Text="Staffelname"/>
                            </StackPanel>
                        </CheckBox>
                        
                        <TextBlock Text="Name Ihrer Rettungshunde-Staffel" 
                                   Style="{StaticResource OrangePdfLabel}"/>
                        <TextBox Text="{Binding StaffelName, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource OrangePdfInputTextBox}"
                                 IsEnabled="{Binding IncludeStaffelName}"/>
                    </StackPanel>
                </Border>

                <!-- Logo Card -->
                <Border Style="{StaticResource OrangePdfExportCard}">
                    <StackPanel>
                        <CheckBox IsChecked="{Binding IncludeLogo}"
                                  Style="{StaticResource OrangePdfCheckBox}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🏷️" Width="16" 
                                          FontSize="12" VerticalAlignment="Center"
                                          Foreground="{DynamicResource Primary}" 
                                          Margin="0,0,8,0"/>
                                <TextBlock Text="Staffel-Logo"/>
                            </StackPanel>
                        </CheckBox>
                        
                        <TextBlock Text="Logo-Datei auswählen (PNG, JPG)" 
                                   Style="{StaticResource OrangePdfLabel}"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0"
                                     Text="{Binding LogoPath}"
                                     Style="{StaticResource OrangePdfInputTextBox}"
                                     IsReadOnly="True"
                                     IsEnabled="{Binding IncludeLogo}"/>
                            
                            <Button Grid.Column="1"
                                    Command="{Binding SelectLogoCommand}"
                                    Style="{StaticResource OrangePdfBrowseButton}"
                                    Margin="12,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📂" FontSize="14" 
                                             Margin="0,0,6,0" Foreground="White"/>
                                    <TextBlock Text="Durchsuchen"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Logo-Vorschau -->
                        <Border Visibility="{Binding LogoPreviewVisibility}"
                               Background="{DynamicResource SurfaceVariant}"
                               CornerRadius="8"
                               Padding="12"
                               Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="Vorschau:" 
                                          Style="{StaticResource OrangePdfLabel}"
                                          Margin="0,0,0,8"/>
                                <Image Source="{Binding LogoPreview}"
                                       MaxHeight="100"
                                       MaxWidth="250"
                                       HorizontalAlignment="Left"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Alarmierungszeit Card -->
                <Border Style="{StaticResource OrangePdfExportCard}">
                    <StackPanel>
                        <CheckBox IsChecked="{Binding IncludeAlarmierungsZeit}"
                                  Style="{StaticResource OrangePdfCheckBox}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⏰" Width="16" 
                                          FontSize="12" VerticalAlignment="Center"
                                          Foreground="{DynamicResource Primary}" 
                                          Margin="0,0,8,0"/>
                                <TextBlock Text="Alarmierungszeit"/>
                            </StackPanel>
                        </CheckBox>
                        
                        <TextBlock Text="Uhrzeit der Alarmierung" 
                                   Style="{StaticResource OrangePdfLabel}"/>
                        <TextBox Text="{Binding AlarmierungsZeit, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource OrangePdfInputTextBox}"
                                 IsEnabled="{Binding IncludeAlarmierungsZeit}"/>
                    </StackPanel>
                </Border>

                <!-- Einsatzort Card -->
                <Border Style="{StaticResource OrangePdfExportCard}">
                    <StackPanel>
                        <CheckBox IsChecked="{Binding IncludeEinsatzort}"
                                  Style="{StaticResource OrangePdfCheckBox}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📍" Width="16" 
                                          FontSize="12" VerticalAlignment="Center"
                                          Foreground="{DynamicResource Primary}" 
                                          Margin="0,0,8,0"/>
                                <TextBlock Text="Einsatzort"/>
                            </StackPanel>
                        </CheckBox>
                        
                        <TextBlock Text="Ort des Einsatzes" 
                                   Style="{StaticResource OrangePdfLabel}"/>
                        <TextBox Text="{Binding Einsatzort, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource OrangePdfInputTextBox}"
                                 IsEnabled="{Binding IncludeEinsatzort}"/>
                    </StackPanel>
                </Border>

                <!-- Besondere Vorkommnisse Card -->
                <Border Style="{StaticResource OrangePdfExportCard}">
                    <StackPanel>
                        <CheckBox IsChecked="{Binding IncludeBesondereVorkommnisse}"
                                  Style="{StaticResource OrangePdfCheckBox}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚠️" Width="16" 
                                          FontSize="12" VerticalAlignment="Center"
                                          Foreground="{DynamicResource Primary}" 
                                          Margin="0,0,8,0"/>
                                <TextBlock Text="Besondere Vorkommnisse"/>
                            </StackPanel>
                        </CheckBox>
                        
                        <TextBlock Text=" Wichtiges für das Einsatzteam" 
                                   Style="{StaticResource OrangePdfLabel}"/>
                        <TextBox Text="{Binding BesondereVorkommnisse, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource OrangePdfInputTextBox}"
                                 IsEnabled="{Binding IncludeBesondereVorkommnisse}"/>
                    </StackPanel>
                </Border>

                <!-- Medizinische Hinweise Card -->
                <Border Style="{StaticResource OrangePdfExportCard}">
                    <StackPanel>
                        <CheckBox IsChecked="{Binding IncludeMedizinischeHinweise}"
                                  Style="{StaticResource OrangePdfCheckBox}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="❤️" Width="16" 
                                          FontSize="12" VerticalAlignment="Center"
                                          Foreground="{DynamicResource Primary}" 
                                          Margin="0,0,8,0"/>
                                <TextBlock Text="Medizinische Hinweise"/>
                            </StackPanel>
                        </CheckBox>
                        
                        <TextBlock Text="Gesundheitsrelevante Informationen" 
                                   Style="{StaticResource OrangePdfLabel}"/>
                        <TextBox Text="{Binding MedizinischeHinweise, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource OrangePdfInputTextBox}"
                                 IsEnabled="{Binding IncludeMedizinischeHinweise}"/>
                    </StackPanel>
                </Border>

                <!-- Notfallsystem Card -->
                <Border Style="{StaticResource OrangePdfExportCard}">
                    <StackPanel>
                        <CheckBox IsChecked="{Binding IncludeNotfallsystem}"
                                  Style="{StaticResource OrangePdfCheckBox}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🚑" Width="16" 
                                          FontSize="12" VerticalAlignment="Center"
                                          Foreground="{DynamicResource Primary}" 
                                          Margin="0,0,8,0"/>
                                <TextBlock Text="Notfallsystem"/>
                            </StackPanel>
                        </CheckBox>
                        
                        <TextBlock Text="U.a. Feuerwehr, Polizei, Rettungsdienst" 
                                   Style="{StaticResource OrangePdfLabel}"/>
                        <TextBox Text="{Binding Notfallsystem, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource OrangePdfInputTextBox}"
                                 IsEnabled="{Binding IncludeNotfallsystem}"/>
                    </StackPanel>
                </Border>

                <!-- PKW Card -->
                <Border Style="{StaticResource OrangePdfExportCard}">
                    <StackPanel>
                        <CheckBox IsChecked="{Binding IncludePkw}"
                                  Style="{StaticResource OrangePdfCheckBox}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🚗" Width="16" 
                                          FontSize="12" VerticalAlignment="Center"
                                          Foreground="{DynamicResource Primary}" 
                                          Margin="0,0,8,0"/>
                                <TextBlock Text="PKW"/>
                            </StackPanel>
                        </CheckBox>
                        
                        <TextBlock Text="Einsatzfahrzeug sicherstellen" 
                                   Style="{StaticResource OrangePdfLabel}"/>
                        <TextBox Text="{Binding Pkw, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource OrangePdfInputTextBox}"
                                 IsEnabled="{Binding IncludePkw}"/>
                    </StackPanel>
                </Border>

                <!-- Zugriffskontrolle Card -->
                <Border Style="{StaticResource OrangePdfExportCard}">
                    <StackPanel>
                        <CheckBox IsChecked="{Binding IncludeZugriffskontrolle}"
                                  Style="{StaticResource OrangePdfCheckBox}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔒" Width="16" 
                                          FontSize="12" VerticalAlignment="Center"
                                          Foreground="{DynamicResource Primary}" 
                                          Margin="0,0,8,0"/>
                                <TextBlock Text="Zugriffskontrolle"/>
                            </StackPanel>
                        </CheckBox>
                        
                        <TextBlock Text="Zutrittsberechtigung klären" 
                                   Style="{StaticResource OrangePdfLabel}"/>
                        <TextBox Text="{Binding Zugriffskontrolle, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource OrangePdfInputTextBox}"
                                 IsEnabled="{Binding IncludeZugriffskontrolle}"/>
                    </StackPanel>
                </Border>

                <!-- Standortdaten Card -->
                <Border Style="{StaticResource OrangePdfExportCard}">
                    <StackPanel>
                        <CheckBox IsChecked="{Binding IncludeStandortdaten}"
                                  Style="{StaticResource OrangePdfCheckBox}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" Width="16" 
                                          FontSize="12" VerticalAlignment="Center"
                                          Foreground="{DynamicResource Primary}" 
                                          Margin="0,0,8,0"/>
                                <TextBlock Text="Standortdaten"/>
                            </StackPanel>
                        </CheckBox>
                        
                        <TextBlock Text="Standort des Einsatzes auf Karte" 
                                   Style="{StaticResource OrangePdfLabel}"/>
                        <TextBox Text="{Binding Standortdaten, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource OrangePdfInputTextBox}"
                                 IsEnabled="{Binding IncludeStandortdaten}"/>
                    </StackPanel>
                </Border>

                <!-- Abschlussbericht Card -->
                <Border Style="{StaticResource OrangePdfExportCard}">
                    <StackPanel>
                        <CheckBox IsChecked="{Binding IncludeAbschlussbericht}"
                                  Style="{StaticResource OrangePdfCheckBox}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📄" Width="16" 
                                          FontSize="12" VerticalAlignment="Center"
                                          Foreground="{DynamicResource Primary}" 
                                          Margin="0,0,8,0"/>
                                <TextBlock Text="Abschlussbericht"/>
                            </StackPanel>
                        </CheckBox>
                        
                        <TextBlock Text="Detailierter Bericht über den Einsatz" 
                                   Style="{StaticResource OrangePdfLabel}"/>
                        <TextBox Text="{Binding Abschlussbericht, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource OrangePdfInputTextBox}"
                                 IsEnabled="{Binding IncludeAbschlussbericht}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Orange Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Command="{Binding CloseCommand}"
                    Style="{StaticResource OrangePdfCancelButton}"
                    Margin="0,0,16,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="❌" FontSize="14" 
                             Margin="0,0,6,0"/>
                    <TextBlock Text="Abbrechen"/>
                </StackPanel>
            </Button>
            <Button Command="{Binding ExportPdfCommand}"
                    Style="{StaticResource OrangePdfExportButton}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📄" FontSize="16" 
                             Margin="0,0,8,0" Foreground="White"/>
                    <TextBlock Text="PDF erstellen"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</views:BaseThemeWindow>
