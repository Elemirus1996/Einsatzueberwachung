<UserControl x:Class="Einsatzueberwachung.Views.TeamCompactCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:vm="clr-namespace:Einsatzueberwachung.ViewModels"
             x:Name="TeamCompactCardRoot">

    <!-- DataContext wird über Code-Behind gesetzt -->

    <UserControl.Resources>
        <!-- Orange Compact Card Styles -->
        
        <!-- Orange Compact Card Style -->
        <Style x:Key="OrangeCompactCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceContainer}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Primary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="MinHeight" Value="240"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="{DynamicResource Primary}" 
                                     ShadowDepth="0" BlurRadius="8" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Orange Timer Display Style -->
        <Style x:Key="OrangeTimerDisplay" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource Primary}"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="{DynamicResource Primary}" 
                                     ShadowDepth="0" BlurRadius="6" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Orange Timer Text Style -->
        <Style x:Key="OrangeTimerText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" 
                                     ShadowDepth="1" BlurRadius="2" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Orange Team Type Badge Style -->
        <Style x:Key="OrangeTeamTypeBadge" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource Primary}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="{DynamicResource Primary}" 
                                     ShadowDepth="0" BlurRadius="4" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Orange Status Indicator Style -->
        <Style x:Key="OrangeStatusIndicator" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="8,3"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" 
                                     ShadowDepth="0" BlurRadius="3" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Orange Info Text Style -->
        <Style x:Key="OrangeInfoText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{DynamicResource OnSurface}"/>
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>
        
        <!-- Orange Info Label Style -->
        <Style x:Key="OrangeInfoLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource Primary}"/>
        </Style>
    </UserControl.Resources>

    <Border Style="{StaticResource OrangeCompactCard}"
            Background="{Binding CardBackground}"
            BorderBrush="{Binding CardBorderBrush}"
            BorderThickness="{Binding CardBorderThickness}"
            MouseEnter="Border_MouseEnter"
            MouseLeave="Border_MouseLeave"
            MouseLeftButtonDown="Border_MouseLeftButtonDown"
            RenderTransformOrigin="0.5,0.5">
        
        <Border.RenderTransform>
            <ScaleTransform ScaleX="1" ScaleY="1"/>
        </Border.RenderTransform>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Orange Header: Team Name + Type Badge -->
            <Grid Grid.Row="0" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <!-- Orange Warning Indicator -->
                    <Border Width="12" Height="12" CornerRadius="6" 
                           Background="{Binding WarningIndicatorBackground}" 
                           VerticalAlignment="Center" 
                           Margin="0,0,8,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsWarningActive}" Value="True">
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard RepeatBehavior="Forever">
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                   From="1.0" To="0.3" Duration="0:0:1" AutoReverse="True"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>

                    <!-- Team Name mit Orange-Akzent -->
                    <TextBlock Text="{Binding TeamName}" 
                              FontSize="18"
                              FontWeight="Bold"
                              Foreground="{DynamicResource OnSurface}"
                              VerticalAlignment="Center"
                              TextTrimming="CharacterEllipsis"/>
                </StackPanel>

                <!-- Orange Team Type Badge -->
                <Border Grid.Column="1"
                       Style="{StaticResource OrangeTeamTypeBadge}"
                       Background="{Binding TeamTypeBadgeBackground}">
                    <TextBlock Text="{Binding TeamTypeText}"
                              Foreground="White" 
                              FontSize="11"
                              FontWeight="Bold"/>
                </Border>
            </Grid>

            <!-- Orange Timer Display - GROSS & ZENTRAL -->
            <Border Grid.Row="1" 
                   Style="{StaticResource OrangeTimerDisplay}"
                   VerticalAlignment="Center">
                <TextBlock Text="{Binding ElapsedTimeString}" 
                          Style="{StaticResource OrangeTimerText}"/>
            </Border>

            <!-- Orange Team-Informationen: Hundeführer, Helfer, Suchgebiet -->
            <StackPanel Grid.Row="2" Margin="0,12,0,0">
                <!-- Hundeführer -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                    <Border Width="20" Height="20" CornerRadius="10" 
                           Background="{DynamicResource Primary}" 
                           Margin="0,0,8,0">
                        <fa:ImageAwesome Icon="User" Width="10" Height="10" 
                                       Foreground="White"/>
                    </Border>
                    <TextBlock Text="HF: " Style="{StaticResource OrangeInfoLabel}"/>
                    <TextBlock Text="{Binding Hundefuehrer}" Style="{StaticResource OrangeInfoText}"/>
                </StackPanel>

                <!-- Helfer -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                    <Border Width="20" Height="20" CornerRadius="10" 
                           Background="{DynamicResource Secondary}" 
                           Margin="0,0,8,0">
                        <fa:ImageAwesome Icon="UserPlus" Width="10" Height="10" 
                                       Foreground="White"/>
                    </Border>
                    <TextBlock Text="Helfer: " Style="{StaticResource OrangeInfoLabel}"/>
                    <TextBlock Text="{Binding Helfer}" Style="{StaticResource OrangeInfoText}"/>
                </StackPanel>

                <!-- Suchgebiet -->
                <StackPanel Orientation="Horizontal">
                    <Border Width="20" Height="20" CornerRadius="10" 
                           Background="{DynamicResource Tertiary}" 
                           Margin="0,0,8,0">
                        <fa:ImageAwesome Icon="MapMarker" Width="10" Height="10" 
                                       Foreground="White"/>
                    </Border>
                    <TextBlock Text="Gebiet: " Style="{StaticResource OrangeInfoLabel}"/>
                    <TextBlock Text="{Binding Suchgebiet}" Style="{StaticResource OrangeInfoText}"/>
                </StackPanel>
            </StackPanel>

            <!-- Orange Status Indicator -->
            <Border Grid.Row="3" 
                   Style="{StaticResource OrangeStatusIndicator}"
                   Background="{Binding StatusIndicatorBackground}"
                   Margin="0,10,0,0">
                <TextBlock Text="{Binding StatusText}"
                          FontSize="11"
                          FontWeight="Bold"
                          Foreground="{Binding StatusTextForeground}"/>
            </Border>
        </Grid>
    </Border>
</UserControl>
