<views:BaseThemeWindow x:Class="Einsatzueberwachung.Views.MapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Einsatzueberwachung.Views"
        xmlns:mapsui="clr-namespace:Mapsui.UI.Wpf;assembly=Mapsui.UI.Wpf"
        Title="Karte - Suchgebiete" 
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource Surface}">

    <Window.Resources>
        <!-- Styles für Buttons -->
        <Style x:Key="MapButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Primary}"/>
            <Setter Property="Foreground" Value="{DynamicResource OnPrimary}"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SurfaceVariant}"/>
            <Setter Property="Foreground" Value="{DynamicResource OnSurfaceVariant}"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" 
                Background="{DynamicResource Surface}"
                BorderBrush="{DynamicResource Outline}"
                BorderThickness="0,0,0,1"
                Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Adresssuche -->
                <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="📍 Adresse:" 
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource OnSurface}"
                               FontSize="14"
                               Margin="0,0,10,0"/>
                    <TextBox x:Name="AddressTextBox"
                             Text="{Binding SearchAddress, UpdateSourceTrigger=PropertyChanged}"
                             Width="400"
                             Height="35"
                             VerticalContentAlignment="Center"
                             Padding="10,0"
                             FontSize="14"
                             Background="{DynamicResource SurfaceVariant}"
                             Foreground="{DynamicResource OnSurfaceVariant}"
                             BorderBrush="{DynamicResource Outline}"
                             BorderThickness="1"
                             Margin="0,0,10,0"/>
                    <Button Content="🔍 Suchen" 
                            Command="{Binding SearchAddressCommand}"
                            Style="{StaticResource MapButtonStyle}"/>
                </StackPanel>

                <!-- Zeichen-Toolbar -->
                <StackPanel Orientation="Horizontal" Grid.Row="1">
                    <Button Content="✏️ Zeichnen starten" 
                            Command="{Binding StartDrawingCommand}"
                            Style="{StaticResource MapButtonStyle}"
                            Background="{DynamicResource Primary}"/>
                    <Button Content="✔️ Fertig" 
                            Command="{Binding FinishDrawingCommand}"
                            Style="{StaticResource MapButtonStyle}"
                            Background="{DynamicResource Tertiary}"/>
                    <Button Content="❌ Abbrechen" 
                            Command="{Binding CancelDrawingCommand}"
                            Style="{StaticResource MapButtonStyle}"
                            Background="{DynamicResource Error}"/>
                    
                    <Separator Width="2" Margin="10,0"/>
                    
                    <Button Content="📍 ELW setzen" 
                            Command="{Binding SetElwPositionCommand}"
                            Style="{StaticResource MapButtonStyle}"
                            Background="#DC143C"
                            ToolTip="Einsatzleitwagen-Position auf der Karte markieren"/>
                    <Button Content="🗑️ ELW löschen" 
                            Command="{Binding ClearElwPositionCommand}"
                            Style="{StaticResource MapButtonStyle}"
                            Background="{DynamicResource SurfaceVariant}"
                            Foreground="{DynamicResource OnSurfaceVariant}"
                            ToolTip="ELW-Position entfernen"/>
                    
                    <Separator Width="2" Margin="10,0"/>
                    
                    <Button Command="{Binding ToggleMapTypeCommand}"
                            Style="{StaticResource IconButtonStyle}"
                            ToolTip="Kartenansicht (Satellit in Beta nicht verfügbar)"
                            IsEnabled="False"
                            Opacity="0.5">
                        <TextBlock Text="🗺️"
                                   FontSize="18"/>
                    </Button>
                    
                    <Button Content="🖨️" 
                            Command="{Binding PrintMapCommand}"
                            Style="{StaticResource IconButtonStyle}"
                            ToolTip="Karte drucken"
                            FontSize="18"/>
                    
                    <TextBlock Text="{Binding IsSettingElw, Converter={StaticResource BoolToElwStatusConverter}}"
                               VerticalAlignment="Center"
                               Foreground="#DC143C"
                               FontSize="14"
                               FontWeight="Bold"
                               Margin="20,0,0,0"
                               Visibility="{Binding IsSettingElw, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    
                    <TextBlock Text="{Binding IsDrawing, Converter={StaticResource BoolToDrawingStatusConverter}}"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource Primary}"
                               FontSize="14"
                               FontWeight="Bold"
                               Margin="20,0,0,0"
                               Visibility="{Binding IsDrawing, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    
                    <!-- Punktanzahl während des Zeichnens -->
                    <StackPanel Orientation="Horizontal" 
                                VerticalAlignment="Center"
                                Margin="20,0,0,0"
                                Visibility="{Binding IsDrawing, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="📍 Punkte: "
                                   Foreground="{DynamicResource OnSurface}"
                                   FontSize="14"/>
                        <TextBlock Text="{Binding CurrentDrawingPoints.Count}"
                                   Foreground="{DynamicResource Primary}"
                                   FontWeight="Bold"
                                   FontSize="14"/>
                        <TextBlock Text=" (min. 3 benötigt)"
                                   Foreground="{DynamicResource OnSurfaceVariant}"
                                   FontSize="12"
                                   Margin="5,0,0,0"
                                   Opacity="0.7"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Hauptinhalt: Karte + Seitenleiste -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Karte -->
            <Border Grid.Column="0" 
                    BorderBrush="{DynamicResource Outline}"
                    BorderThickness="0,0,1,0">
                <mapsui:MapControl x:Name="MapControl"
                                   MouseLeftButtonUp="MapControl_MouseLeftButtonUp"/>
            </Border>

            <!-- Seitenleiste: Suchgebiete -->
            <Border Grid.Column="1" 
                    Background="{DynamicResource SurfaceVariant}"
                    Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0"
                               Text="🗺️ Suchgebiete"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{DynamicResource OnSurfaceVariant}"
                               Margin="0,0,0,15"/>

                    <!-- Liste der Suchgebiete -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding SearchAreas}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource Surface}"
                                            BorderBrush="{DynamicResource Outline}"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="12"
                                            Margin="0,0,0,10"
                                            Cursor="Hand">
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" 
                                                         Command="{Binding DataContext.SelectAreaCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                         CommandParameter="{Binding}"/>
                                        </Border.InputBindings>

                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Gebiet Name und Farbe -->
                                            <StackPanel Orientation="Horizontal" Grid.Row="0">
                                                <Rectangle Width="20" 
                                                          Height="20" 
                                                          Fill="{Binding Color, Converter={StaticResource ColorToBrushConverter}}"
                                                          Stroke="{DynamicResource Outline}"
                                                          StrokeThickness="1"
                                                          RadiusX="4"
                                                          RadiusY="4"
                                                          Margin="0,0,10,0"/>
                                                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                                        FontSize="16"
                                                        FontWeight="Bold"
                                                        Foreground="{DynamicResource OnSurface}"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        VerticalAlignment="Center"/>
                                            </StackPanel>

                                            <!-- Fläche -->
                                            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,5,0,0">
                                                <TextBlock Text="📏 Fläche:" 
                                                          VerticalAlignment="Center"
                                                          Foreground="{DynamicResource OnSurfaceVariant}"
                                                          FontSize="12"
                                                          Margin="0,0,10,0"/>
                                                <TextBlock Text="{Binding FormattedArea}"
                                                          VerticalAlignment="Center"
                                                          Foreground="{DynamicResource Primary}"
                                                          FontWeight="Bold"
                                                          FontSize="12"/>
                                            </StackPanel>

                                            <!-- Team-Zuordnung -->
                                            <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,8,0,0">
                                                <TextBlock Text="👥 Team:" 
                                                          VerticalAlignment="Center"
                                                          Foreground="{DynamicResource OnSurface}"
                                                          Margin="0,0,10,0"/>
                                                <ComboBox ItemsSource="{Binding DataContext.AvailableTeams, RelativeSource={RelativeSource AncestorType=Window}}"
                                                         SelectedItem="{Binding AssignedTeam}"
                                                         Width="150"
                                                         Background="{DynamicResource Surface}"
                                                         Foreground="{DynamicResource OnSurface}"/>
                                            </StackPanel>

                                            <!-- Status -->
                                            <CheckBox Grid.Row="3" 
                                                     Content="✔️ Abgesucht"
                                                     IsChecked="{Binding IsCompleted}"
                                                     Foreground="{DynamicResource OnSurface}"
                                                     Margin="0,8,0,0"/>

                                            <!-- Notizen -->
                                            <TextBox Grid.Row="4"
                                                    Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                                                    TextWrapping="Wrap"
                                                    AcceptsReturn="True"
                                                    Height="50"
                                                    Background="{DynamicResource SurfaceVariant}"
                                                    Foreground="{DynamicResource OnSurfaceVariant}"
                                                    BorderBrush="{DynamicResource Outline}"
                                                    Padding="5"
                                                    Margin="0,8,0,0"
                                                    VerticalScrollBarVisibility="Auto"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="{DynamicResource Surface}"
                BorderBrush="{DynamicResource Outline}"
                BorderThickness="0,1,0,0"
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <TextBlock Text="📊 Suchgebiete: "
                               Foreground="{DynamicResource OnSurface}"
                               FontSize="12"/>
                    <TextBlock Text="{Binding SearchAreas.Count}"
                               Foreground="{DynamicResource Primary}"
                               FontWeight="Bold"
                               FontSize="12"/>
                    <TextBlock Text=" | Zeichnenpunkte: "
                               Foreground="{DynamicResource OnSurface}"
                               FontSize="12"
                               Margin="20,0,0,0"/>
                    <TextBlock Text="{Binding CurrentDrawingPoints.Count}"
                               Foreground="{DynamicResource Primary}"
                               FontWeight="Bold"
                               FontSize="12"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Column="1">
                    <Button Content="🗑️ Gebiet löschen" 
                            Command="{Binding DeleteAreaCommand}"
                            Style="{StaticResource MapButtonStyle}"
                            Background="{DynamicResource Error}"
                            Padding="10,5"/>
                    <Button Content="Schließen" 
                            Click="CloseButton_Click"
                            Style="{StaticResource MapButtonStyle}"
                            Background="{DynamicResource SurfaceVariant}"
                            Foreground="{DynamicResource OnSurfaceVariant}"
                            Padding="10,5"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</views:BaseThemeWindow>
