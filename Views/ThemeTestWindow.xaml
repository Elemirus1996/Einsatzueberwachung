<Window x:Class="Einsatzueberwachung.Views.ThemeTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Theme Test - EinsatzÃ¼berwachung v2.0" 
        Width="600" Height="500"
        Background="{DynamicResource Surface}"
        WindowStartupLocation="CenterScreen">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel>
            
            <!-- Header -->
            <Border Style="{StaticResource Card}" Background="{DynamicResource PrimaryGradient}" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="ðŸŽ¨ Theme System Test" 
                               Style="{StaticResource HeadlineMedium}" 
                               Foreground="{DynamicResource OnPrimary}"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="ModeText" 
                               Text="Mode" 
                               Style="{StaticResource TitleMedium}"
                               Foreground="{DynamicResource OnPrimary}"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Status Information -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Status" Style="{StaticResource TitleLarge}" Margin="0,0,0,10"/>
                    <TextBlock x:Name="StatusText" 
                               Text="Status wird geladen..." 
                               Style="{StaticResource BodyMedium}"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
            
            <!-- Theme Controls -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Theme-Steuerung" Style="{StaticResource TitleLarge}" Margin="0,0,0,15"/>
                    
                    <Button Content="ðŸ”„ Theme wechseln"
                            Style="{StaticResource FilledButton}"
                            Margin="0,0,0,10"
                            Click="ToggleTheme_Click"/>
                    
                    <Button Content="ðŸ¤– Auto-Modus"
                            Style="{StaticResource OutlinedButton}"
                            Margin="0,0,0,10"
                            Click="EnableAutoMode_Click"/>
                    
                    <StackPanel Orientation="Horizontal">
                        <Button Content="â˜€ï¸ Light Mode"
                                Style="{StaticResource TextButton}"
                                Margin="0,0,10,0"
                                Click="SetLightMode_Click"/>
                        
                        <Button Content="ðŸŒ™ Dark Mode"
                                Style="{StaticResource TextButton}"
                                Click="SetDarkMode_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Components Test -->
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Komponenten-Test" Style="{StaticResource TitleLarge}" Margin="0,0,0,15"/>
                    
                    <!-- Text Input -->
                    <TextBlock Text="Texteingabe:" Style="{StaticResource LabelMedium}" Margin="0,0,0,5"/>
                    <TextBox Text="Dies ist ein Test-Text" Margin="0,0,0,10"/>
                    
                    <!-- ComboBox -->
                    <TextBlock Text="Auswahl:" Style="{StaticResource LabelMedium}" Margin="0,0,0,5"/>
                    <ComboBox Margin="0,0,0,10">
                        <ComboBoxItem Content="Option 1"/>
                        <ComboBoxItem Content="Option 2" IsSelected="True"/>
                        <ComboBoxItem Content="Option 3"/>
                    </ComboBox>
                    
                    <!-- CheckBox and RadioButton -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <CheckBox Content="CheckBox Test" IsChecked="True" Margin="0,0,20,0"/>
                        <RadioButton Content="RadioButton Test" IsChecked="True"/>
                    </StackPanel>
                    
                    <!-- Special Cards -->
                    <Border Style="{StaticResource OrangeCard}" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="ðŸ§¡ Orange Card" Style="{StaticResource TitleMedium}" Margin="0,0,0,5"/>
                            <TextBlock Text="Diese Karte nutzt das Orange-Design-System" Style="{StaticResource BodySmall}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
            
        </StackPanel>
    </ScrollViewer>
</Window>
