<views:BaseThemeWindow x:Class="Einsatzueberwachung.Views.TeamDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:views="clr-namespace:Einsatzueberwachung.Views"
        Title="Team-Details" 
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="500" MinWidth="700"
        Background="{DynamicResource Surface}"
        Icon="pack://application:,,,/Resources/app.ico">

    <Window.Resources>
        <!-- Detail window specific styles using the design system -->
        <Style x:Key="DetailCard" TargetType="Border" BasedOn="{StaticResource Card}">
            <Setter Property="Margin" Value="20"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="{DynamicResource Surface}"/>
            <Setter Property="Effect" Value="{StaticResource Elevation3}"/>
        </Style>

        <Style x:Key="DetailHeader" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="Margin" Value="24,24,24,16"/>
        </Style>

        <Style x:Key="TeamIcon" TargetType="fa:ImageAwesome">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Foreground" Value="{DynamicResource Primary}"/>
            <Setter Property="Margin" Value="0,0,16,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="DetailTitle" TargetType="TextBlock" BasedOn="{StaticResource HeadlineMedium}">
            <Setter Property="Foreground" Value="{DynamicResource OnSurface}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <Border Style="{StaticResource DetailCard}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Style="{StaticResource DetailHeader}">
                <fa:ImageAwesome Icon="Users" Style="{StaticResource TeamIcon}"/>
                <StackPanel>
                    <TextBlock Text="{Binding Team.TeamName, FallbackValue='Team-Details'}" 
                              Style="{StaticResource DetailTitle}"/>
                    <TextBlock Text="{Binding Team.MultipleTeamTypes.DisplayName, FallbackValue='Allgemein'}" 
                              Style="{StaticResource BodyMedium}"
                              Foreground="{DynamicResource OnSurfaceVariant}"
                              Margin="0,4,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- Separator -->
            <Border Grid.Row="0" 
                   Height="1" 
                   Background="{DynamicResource OutlineVariant}"
                   Margin="24,0,24,0"
                   VerticalAlignment="Bottom"/>

            <!-- Team Control Container -->
            <Border Grid.Row="1" 
                   x:Name="TeamControlContainer" 
                   Margin="0"/>

            <!-- Action Buttons -->
            <Border Grid.Row="2" 
                   Background="{DynamicResource SurfaceContainer}"
                   Padding="24,16">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <!-- Delete Team Button -->
                    <Button Content="Team löschen" 
                           Style="{StaticResource OutlinedButton}"
                           Command="{Binding DeleteTeamCommand}"
                           Foreground="{DynamicResource Error}"
                           BorderBrush="{DynamicResource Error}"
                           Padding="16,10" 
                           Margin="0,0,12,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" 
                                        Background="Transparent" 
                                        BorderBrush="{DynamicResource Error}"
                                        BorderThickness="2"
                                        CornerRadius="20"
                                        Padding="{TemplateBinding Padding}">
                                    <StackPanel Orientation="Horizontal" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center">
                                        <fa:ImageAwesome Icon="Trash" Width="14" Height="14" 
                                                       Foreground="{DynamicResource Error}" 
                                                       Margin="0,0,8,0"/>
                                        <ContentPresenter Content="{TemplateBinding Content}"
                                                        TextElement.Foreground="{DynamicResource Error}"
                                                        TextElement.FontWeight="Medium"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="{DynamicResource ErrorContainer}"/>
                                        <Setter TargetName="border" Property="BorderThickness" Value="3"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="{DynamicResource ErrorContainer}"/>
                                        <Setter Property="Opacity" Value="0.85"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    <!-- Refresh Button -->
                    <Button Content="Aktualisieren" 
                           Style="{StaticResource OutlinedButton}"
                           Command="{Binding RefreshTeamCommand}"
                           Padding="16,10" 
                           Margin="0,0,12,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" 
                                        Background="Transparent" 
                                        BorderBrush="{DynamicResource Outline}"
                                        BorderThickness="2"
                                        CornerRadius="20"
                                        Padding="{TemplateBinding Padding}">
                                    <StackPanel Orientation="Horizontal" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center">
                                        <fa:ImageAwesome Icon="Refresh" Width="14" Height="14" 
                                                       Foreground="{DynamicResource OnSurface}" 
                                                       Margin="0,0,8,0"/>
                                        <ContentPresenter Content="{TemplateBinding Content}"
                                                        TextElement.Foreground="{DynamicResource OnSurface}"
                                                        TextElement.FontWeight="Medium"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="{DynamicResource SurfaceVariant}"/>
                                        <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource Primary}"/>
                                        <Setter TargetName="border" Property="BorderThickness" Value="3"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="{DynamicResource SurfaceVariant}"/>
                                        <Setter Property="Opacity" Value="0.85"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    <!-- Close Button -->
                    <Button Content="Schließen" 
                           Style="{StaticResource FilledButton}"
                           Command="{Binding CloseWindowCommand}"
                           Padding="20,10">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" 
                                        Background="{DynamicResource Primary}" 
                                        CornerRadius="20"
                                        Effect="{StaticResource Elevation1}"
                                        Padding="{TemplateBinding Padding}">
                                    <StackPanel Orientation="Horizontal" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center">
                                        <fa:ImageAwesome Icon="Check" Width="14" Height="14" 
                                                       Foreground="{DynamicResource OnPrimary}" 
                                                       Margin="0,0,8,0"/>
                                        <ContentPresenter Content="{TemplateBinding Content}"
                                                        TextElement.Foreground="{DynamicResource OnPrimary}"
                                                        TextElement.FontWeight="Medium"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Effect" Value="{StaticResource Elevation2}"/>
                                        <Setter Property="Opacity" Value="0.92"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Effect" Value="{StaticResource Elevation1}"/>
                                        <Setter Property="Opacity" Value="0.88"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</views:BaseThemeWindow>
