<Window x:Class="Einsatzueberwachung.Views.TeamDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:vm="clr-namespace:Einsatzueberwachung.ViewModels"
        xmlns:views="clr-namespace:Einsatzueberwachung.Views"
        Title="{Binding WindowTitle}" 
        Height="900" Width="700"
        MinHeight="800" MinWidth="650"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        Background="{DynamicResource Surface}">

    <!-- DataContext wird über Code-Behind gesetzt -->

    <Window.Resources>
        <!-- Converter als Resource definieren -->
        <views:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Orange Team Detail Card Style - Optimiert für TeamControl -->
        <Style x:Key="OrangeTeamDetailCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceContainer}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Primary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Effect" Value="{StaticResource Elevation3}"/>
        </Style>

        <!-- Orange Action Button Style -->
        <Style x:Key="OrangeActionButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Primary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource PrimaryVariant}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{DynamicResource OutlineVariant}"/>
                    <Setter Property="Foreground" Value="{DynamicResource OnSurfaceVariant}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Orange Secondary Button Style -->
        <Style x:Key="OrangeSecondaryButton" TargetType="Button" BasedOn="{StaticResource OrangeActionButton}">
            <Setter Property="Background" Value="{DynamicResource SecondaryContainer}"/>
            <Setter Property="Foreground" Value="{DynamicResource OnSecondaryContainer}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Secondary}"/>
                    <Setter Property="Foreground" Value="{DynamicResource OnSecondary}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Danger Button Style -->
        <Style x:Key="OrangeDangerButton" TargetType="Button" BasedOn="{StaticResource OrangeActionButton}">
            <Setter Property="Background" Value="{DynamicResource Error}"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#F44336" 
                                             ShadowDepth="0" BlurRadius="8" Opacity="0.4"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Orange Header mit Gradient -->
        <Border Grid.Row="0" 
                Background="{DynamicResource PrimaryGradient}" 
                CornerRadius="12" 
                Padding="20"
                Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Orange Team Icon mit Glow -->
                <Border Grid.Column="0" Width="48" Height="48" CornerRadius="24" 
                       Background="White" Margin="0,0,16,0"
                       Effect="{StaticResource OrangeGlow}">
                    <fa:ImageAwesome Icon="Users" Width="24" Height="24" 
                                   Foreground="{DynamicResource Primary}"/>
                </Border>

                <!-- Team Info -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding TeamName}" 
                              FontSize="24" 
                              FontWeight="Bold"
                              Foreground="White"/>
                    <TextBlock Text="{Binding TeamType}" 
                              FontSize="14"
                              Foreground="White"
                              Opacity="0.9"
                              Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Close Button -->
                <Button Grid.Column="2" 
                       Command="{Binding CloseWindowCommand}"
                       CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                       Style="{StaticResource OrangeAccentButton}" 
                       Width="36" Height="36" Margin="8,0,0,0">
                    <fa:ImageAwesome Icon="Times" Width="14" Height="14" Foreground="White"/>
                </Button>
            </Grid>
        </Border>

        <!-- Orange Action Bar - Kompakter -->
        <Border Grid.Row="1" Style="{StaticResource OrangeCard}" Margin="0,0,0,12" Padding="12">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Timer Toggle Button -->
                    <Button Command="{Binding ToggleTimerCommand}"
                           Style="{StaticResource OrangeActionButton}"
                           Padding="12,8" Margin="2">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="PlayCircle" Width="14" Height="14" 
                                           Foreground="White" Margin="0,0,6,0"/>
                            <TextBlock Text="Timer" Foreground="White" FontSize="12"/>
                        </StackPanel>
                    </Button>

                    <!-- Reset Button -->
                    <Button Command="{Binding ResetTimerCommand}"
                           Style="{StaticResource OrangeSecondaryButton}"
                           Padding="12,8" Margin="2">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Refresh" Width="14" Height="14" 
                                           Foreground="{DynamicResource OnSecondaryContainer}" Margin="0,0,6,0"/>
                            <TextBlock Text="Reset" 
                                      Foreground="{DynamicResource OnSecondaryContainer}" FontSize="12"/>
                        </StackPanel>
                    </Button>

                    <!-- Edit Button -->
                    <Button Command="{Binding OpenTeamEditCommand}"
                           Style="{StaticResource OrangeSecondaryButton}"
                           Padding="12,8" Margin="2">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Edit" Width="14" Height="14" 
                                           Foreground="{DynamicResource OnSecondaryContainer}" Margin="0,0,6,0"/>
                            <TextBlock Text="Bearbeiten" 
                                      Foreground="{DynamicResource OnSecondaryContainer}" FontSize="12"/>
                        </StackPanel>
                    </Button>

                    <!-- Refresh Button -->
                    <Button Command="{Binding RefreshTeamCommand}"
                           Style="{StaticResource OrangeSecondaryButton}"
                           Padding="12,8" Margin="2">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Refresh" Width="14" Height="14" 
                                           Foreground="{DynamicResource OnSecondaryContainer}" Margin="0,0,6,0"/>
                            <TextBlock Text="Aktualisieren" 
                                      Foreground="{DynamicResource OnSecondaryContainer}" FontSize="12"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- TeamControl Container - Optimiert für vollständige Anzeige -->
        <ScrollViewer Grid.Row="2" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="0" Margin="0,0,0,12">
            <Border x:Name="TeamControlContainer" 
                    Style="{StaticResource OrangeTeamDetailCard}">
                
                <!-- Placeholder Content wenn kein Team geladen -->
                <Grid>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                               Visibility="{Binding IsTeamLoaded, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverted}">
                        <fa:ImageAwesome Icon="ExclamationTriangle" Width="48" Height="48" 
                                       Foreground="{DynamicResource Primary}" Margin="0,0,0,12"/>
                        <TextBlock Text="Kein Team geladen" 
                                  Style="{StaticResource TitleMedium}"
                                  Foreground="{DynamicResource OnSurfaceVariant}"
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="Das Team konnte nicht geladen werden." 
                                  Style="{StaticResource BodyMedium}"
                                  Foreground="{DynamicResource OnSurfaceVariant}"
                                  HorizontalAlignment="Center"
                                  Margin="0,8,0,0"/>
                    </StackPanel>
                    
                    <!-- TeamControl wird hier programmatisch eingefügt -->
                </Grid>
            </Border>
        </ScrollViewer>

        <!-- Untere Action-Leiste mit Delete-Button - Kompakter -->
        <Border Grid.Row="3" Style="{StaticResource OrangeCard}" Margin="0" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Info Text -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <fa:ImageAwesome Icon="InfoCircle" Width="14" Height="14" 
                                   Foreground="{DynamicResource OnSurfaceVariant}" Margin="0,0,6,0"/>
                    <TextBlock Text="Automatisch gespeichert" 
                              FontSize="11"
                              Foreground="{DynamicResource OnSurfaceVariant}"/>
                </StackPanel>

                <!-- Delete Button -->
                <Button Grid.Column="1" 
                       Command="{Binding DeleteTeamCommand}"
                       Style="{StaticResource OrangeDangerButton}"
                       ToolTip="Team permanent löschen"
                       Padding="16,10">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Trash" Width="14" Height="14" 
                                       Foreground="White" Margin="0,0,8,0"/>
                        <TextBlock Text="Team löschen" Foreground="White" FontWeight="Bold" FontSize="13"/>
                    </StackPanel>
                </Button>

                <!-- Status Info -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <TextBlock Text="Detailansicht" 
                              FontSize="11"
                              Foreground="{DynamicResource OnSurfaceVariant}" Margin="0,0,6,0"/>
                    <fa:ImageAwesome Icon="Eye" Width="14" Height="14" 
                                   Foreground="{DynamicResource Primary}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
