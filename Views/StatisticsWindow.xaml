<views:BaseThemeWindow x:Class="Einsatzueberwachung.Views.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:views="clr-namespace:Einsatzueberwachung.Views"
        xmlns:vm="clr-namespace:Einsatzueberwachung.ViewModels"
        Title="{Binding WindowTitle}" 
        Height="850" Width="1300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="600" MinWidth="800"
        Icon="pack://application:,,,/Resources/app.ico"
        Background="{DynamicResource Surface}">

    <!-- DataContext wird Ã¼ber Code-Behind gesetzt -->

    <Window.Resources>
        <!-- Standard Converter -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Statistics-specific styles using the new design system -->
        
        <Style x:Key="StatisticsCard" TargetType="Border" BasedOn="{StaticResource Card}">
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="MinHeight" Value="140"/>
        </Style>
        
        <Style x:Key="MetricValue" TargetType="TextBlock" BasedOn="{StaticResource HeadlineLarge}">
            <Setter Property="Foreground" Value="{DynamicResource Primary}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        
        <Style x:Key="MetricLabel" TargetType="TextBlock" BasedOn="{StaticResource LabelMedium}">
            <Setter Property="Foreground" Value="{DynamicResource OnSurface}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
        </Style>
        
        <Style x:Key="MetricProgress" TargetType="ProgressBar">
            <Setter Property="Height" Value="8"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="Background" Value="{DynamicResource SurfaceVariant}"/>
            <Setter Property="Foreground" Value="{DynamicResource Primary}"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="ContentCard" TargetType="Border" BasedOn="{StaticResource Card}">
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock" BasedOn="{StaticResource HeadlineMedium}">
            <Setter Property="Foreground" Value="{DynamicResource Primary}"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="CardTitle" TargetType="TextBlock" BasedOn="{StaticResource TitleMedium}">
            <Setter Property="Foreground" Value="{DynamicResource OnSurface}"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with new design system -->
        <Border Grid.Row="0" Style="{StaticResource Card}" Padding="24" Margin="0,0,0,20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#F57C00" Offset="0"/>
                    <GradientStop Color="#FF9800" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Header Icon & Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Width="56" Height="56" CornerRadius="28" 
                           Background="{DynamicResource OnPrimary}" 
                           Margin="0,0,20,0"
                           Effect="{StaticResource Elevation2}">
                        <fa:ImageAwesome Icon="BarChart" Width="28" Height="28" 
                                       Foreground="{DynamicResource Primary}"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“Š Einsatz-Statistiken" 
                                   Style="{StaticResource HeadlineLarge}"
                                   Foreground="{DynamicResource OnPrimary}"/>
                        <TextBlock Text="{Binding LastUpdateText}" 
                                   Style="{StaticResource BodyMedium}"
                                   Foreground="{DynamicResource OnPrimary}"
                                   Opacity="0.9"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Command="{Binding RefreshStatsCommand}" 
                           Style="{StaticResource OutlinedButton}" 
                           Margin="0,0,12,0"
                           Background="{DynamicResource OnPrimary}" 
                           Foreground="{DynamicResource Primary}"
                           BorderBrush="{DynamicResource OnPrimary}">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Refresh" Width="16" Height="16" 
                                           Margin="0,0,8,0"/>
                            <TextBlock Text="Aktualisieren"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding ExportReportCommand}"
                           Style="{StaticResource OutlinedButton}"
                           Background="{DynamicResource OnPrimary}" 
                           Foreground="{DynamicResource Primary}"
                           BorderBrush="{DynamicResource OnPrimary}">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Download" Width="16" Height="16" 
                                           Margin="0,0,8,0"/>
                            <TextBlock Text="Export"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- Quick Metrics Row -->
                <TextBlock Text="ðŸ“ˆ Ãœbersicht" Style="{StaticResource SectionTitle}"/>
                
                <UniformGrid Columns="4" Margin="0,0,0,24">
                    <!-- Einsatzdauer -->
                    <Border Style="{StaticResource StatisticsCard}">
                        <StackPanel>
                            <Border Width="48" Height="48" CornerRadius="24" 
                                   Background="{DynamicResource Primary}" 
                                   HorizontalAlignment="Center" Margin="0,0,0,12">
                                <fa:ImageAwesome Icon="ClockOutline" Width="24" Height="24" 
                                               Foreground="{DynamicResource OnPrimary}"/>
                            </Border>
                            <TextBlock Text="{Binding EinsatzdauerValue}" Style="{StaticResource MetricValue}"/>
                            <TextBlock Text="Einsatzdauer" Style="{StaticResource MetricLabel}"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Anzahl Teams -->
                    <Border Style="{StaticResource StatisticsCard}">
                        <StackPanel>
                            <Border Width="48" Height="48" CornerRadius="24" 
                                   Background="{DynamicResource Secondary}" 
                                   HorizontalAlignment="Center" Margin="0,0,0,12">
                                <fa:ImageAwesome Icon="Users" Width="24" Height="24" 
                                               Foreground="{DynamicResource OnSecondary}"/>
                            </Border>
                            <TextBlock Text="{Binding AnzahlTeamsValue}" Style="{StaticResource MetricValue}"/>
                            <TextBlock Text="Teams Gesamt" Style="{StaticResource MetricLabel}"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Aktive Teams -->
                    <Border Style="{StaticResource StatisticsCard}">
                        <StackPanel>
                            <Border Width="48" Height="48" CornerRadius="24" 
                                   Background="{DynamicResource Success}" 
                                   HorizontalAlignment="Center" Margin="0,0,0,12">
                                <fa:ImageAwesome Icon="Play" Width="24" Height="24" 
                                               Foreground="{DynamicResource OnSuccess}"/>
                            </Border>
                            <TextBlock Text="{Binding AktiveTeamsValue}" Style="{StaticResource MetricValue}"/>
                            <TextBlock Text="Teams Aktiv" Style="{StaticResource MetricLabel}"/>
                            <ProgressBar Value="{Binding TeamAuslastungProgress}" Maximum="100"
                                        Style="{StaticResource MetricProgress}"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Durchschnittszeit -->
                    <Border Style="{StaticResource StatisticsCard}">
                        <StackPanel>
                            <Border Width="48" Height="48" CornerRadius="24" 
                                   Background="{DynamicResource Tertiary}" 
                                   HorizontalAlignment="Center" Margin="0,0,0,12">
                                <fa:ImageAwesome Icon="Calculator" Width="24" Height="24" 
                                               Foreground="{DynamicResource OnTertiary}"/>
                            </Border>
                            <TextBlock Text="{Binding DurchschnittszeitValue}" Style="{StaticResource MetricValue}"/>
                            <TextBlock Text="âŒ€ Einsatzzeit" Style="{StaticResource MetricLabel}"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!-- Team Performance Section -->
                <TextBlock Text="ðŸ† Team-Performance" Style="{StaticResource SectionTitle}"/>
                
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Team Rankings -->
                    <Border Grid.Column="0" Style="{StaticResource ContentCard}" Margin="0,0,12,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <Border Width="32" Height="32" CornerRadius="16" 
                                       Background="{DynamicResource Primary}" Margin="0,0,12,0">
                                    <fa:ImageAwesome Icon="Trophy" Width="16" Height="16" 
                                                   Foreground="{DynamicResource OnPrimary}"/>
                                </Border>
                                <TextBlock Text="Team-Rankings" Style="{StaticResource CardTitle}" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <ListView ItemsSource="{Binding TeamRankings}" 
                                     MaxHeight="320"
                                     Background="Transparent"
                                     BorderThickness="0">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource SurfaceVariant}" 
                                               CornerRadius="8" Padding="12" Margin="0,2">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="80"/>
                                                    <ColumnDefinition Width="60"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <Border Grid.Column="0" Background="{DynamicResource Primary}"
                                                       Width="24" Height="24" CornerRadius="12">
                                                    <TextBlock Text="{Binding Rank}" 
                                                             Foreground="{DynamicResource OnPrimary}" FontWeight="Bold" 
                                                             HorizontalAlignment="Center" VerticalAlignment="Center"
                                                             FontSize="12"/>
                                                </Border>
                                                <TextBlock Grid.Column="1" Text="{Binding TeamName}" 
                                                          Style="{StaticResource BodyMedium}"
                                                          VerticalAlignment="Center" Margin="8,0,0,0"/>
                                                <TextBlock Grid.Column="2" Text="{Binding Einsatzzeit}" 
                                                          Style="{StaticResource LabelMedium}"
                                                          VerticalAlignment="Center" FontFamily="Consolas"/>
                                                <Border Grid.Column="3" Background="{Binding StatusColor}" 
                                                       CornerRadius="12" Padding="8,4">
                                                    <TextBlock Text="{Binding Status}" 
                                                              Foreground="{DynamicResource OnPrimary}" 
                                                              Style="{StaticResource LabelSmall}" 
                                                              HorizontalAlignment="Center" FontWeight="Bold"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Border>
                    
                    <!-- Team Type Distribution -->
                    <Border Grid.Column="1" Style="{StaticResource ContentCard}" Margin="12,0,0,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <Border Width="32" Height="32" CornerRadius="16" 
                                       Background="{DynamicResource Secondary}" Margin="0,0,12,0">
                                    <fa:ImageAwesome Icon="PieChart" Width="16" Height="16" 
                                                   Foreground="{DynamicResource OnSecondary}"/>
                                </Border>
                                <TextBlock Text="Team-Type Verteilung" Style="{StaticResource CardTitle}" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <ItemsControl ItemsSource="{Binding TeamTypeDistribution}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource SurfaceVariant}" 
                                               CornerRadius="8" Padding="12" Margin="0,4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="60"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding TeamType}" 
                                                             Style="{StaticResource LabelMedium}"
                                                             FontWeight="SemiBold" 
                                                             Foreground="{DynamicResource OnSurface}"/>
                                                    <ProgressBar Value="{Binding Percentage}" Maximum="100" 
                                                               Height="8" Margin="0,4,0,2" 
                                                               Background="{DynamicResource Surface}"
                                                               Foreground="{Binding Color}"/>
                                                    <TextBlock Text="{Binding DetailText}" 
                                                              Style="{StaticResource BodySmall}"
                                                              Foreground="{DynamicResource OnSurfaceVariant}"/>
                                                </StackPanel>
                                                <Border Grid.Column="1" Background="{Binding Color}"
                                                       Width="36" Height="36" CornerRadius="18"
                                                       VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Count}" 
                                                             Foreground="{DynamicResource OnPrimary}" FontWeight="Bold" 
                                                             HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Recommendations Section -->
                <TextBlock Text="ðŸ’¡ Empfehlungen" Style="{StaticResource SectionTitle}"/>
                
                <Border Style="{StaticResource ContentCard}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Width="32" Height="32" CornerRadius="16" 
                                   Background="{DynamicResource Warning}" Margin="0,0,12,0">
                                <fa:ImageAwesome Icon="LightbulbOutline" Width="16" Height="16" 
                                               Foreground="{DynamicResource OnWarning}"/>
                            </Border>
                            <TextBlock Text="Intelligente Empfehlungen" Style="{StaticResource CardTitle}" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <ItemsControl ItemsSource="{Binding Recommendations}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource SurfaceVariant}" 
                                           CornerRadius="8" Margin="0,0,0,8" Padding="16">
                                        <StackPanel Orientation="Horizontal">
                                            <Border Background="{Binding Priority}" Width="4" Height="48" 
                                                   CornerRadius="2" Margin="0,0,16,0"/>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Title}" 
                                                         Style="{StaticResource LabelLarge}"
                                                         FontWeight="SemiBold"
                                                         Foreground="{DynamicResource OnSurface}"/>
                                                <TextBlock Text="{Binding Description}" 
                                                         Style="{StaticResource BodyMedium}"
                                                         Foreground="{DynamicResource OnSurfaceVariant}"
                                                         TextWrapping="Wrap" Margin="0,4,0,0"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Timeline Section -->
                <TextBlock Text="ðŸ“… Einsatz-Timeline" Style="{StaticResource SectionTitle}"/>
                
                <Border Style="{StaticResource ContentCard}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Width="32" Height="32" CornerRadius="16" 
                                   Background="{DynamicResource Tertiary}" Margin="0,0,12,0">
                                <fa:ImageAwesome Icon="History" Width="16" Height="16" 
                                               Foreground="{DynamicResource OnTertiary}"/>
                            </Border>
                            <TextBlock Text="Chronologische Ereignisse" Style="{StaticResource CardTitle}" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding TimelineEvents}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding EventColor}" CornerRadius="12" 
                                               Margin="6" Padding="12" MinWidth="140">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Time}" FontWeight="Bold" 
                                                          Foreground="{DynamicResource OnPrimary}" 
                                                          HorizontalAlignment="Center"
                                                          Style="{StaticResource TitleMedium}"/>
                                                <TextBlock Text="{Binding EventType}" 
                                                          Foreground="{DynamicResource OnPrimary}" 
                                                          HorizontalAlignment="Center" 
                                                          Style="{StaticResource LabelMedium}"
                                                          Opacity="0.9" Margin="0,2,0,0"/>
                                                <TextBlock Text="{Binding TeamName}" 
                                                          Foreground="{DynamicResource OnPrimary}" 
                                                          HorizontalAlignment="Center" 
                                                          Style="{StaticResource LabelSmall}"
                                                          Opacity="0.8" Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Loading Indicator fÃ¼r Refresh -->
                <Border Background="{DynamicResource PrimaryContainer}" 
                       CornerRadius="8" Padding="16" 
                       Visibility="{Binding IsRefreshing, Converter={StaticResource BooleanToVisibilityConverter}}"
                       HorizontalAlignment="Center" Margin="0,16,0,0">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Spinner" 
                                       Width="20" Height="20" 
                                       Foreground="{DynamicResource Primary}"
                                       Margin="0,0,12,0">
                            <fa:ImageAwesome.RenderTransform>
                                <RotateTransform x:Name="SpinnerRotate"/>
                            </fa:ImageAwesome.RenderTransform>
                            <fa:ImageAwesome.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="SpinnerRotate"
                                                           Storyboard.TargetProperty="Angle"
                                                           From="0" To="360" Duration="0:0:1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </fa:ImageAwesome.Triggers>
                        </fa:ImageAwesome>
                        <TextBlock Text="Statistiken werden aktualisiert..." 
                                  Style="{StaticResource LabelMedium}"
                                  FontWeight="SemiBold"
                                  Foreground="{DynamicResource Primary}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</views:BaseThemeWindow>
