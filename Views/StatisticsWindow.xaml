<Window x:Class="Einsatzueberwachung.Views.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:vm="clr-namespace:Einsatzueberwachung.ViewModels"
        Title="{Binding WindowTitle}" 
        Height="850" Width="1300"
        WindowStartupLocation="CenterOwner"
        Icon="pack://application:,,,/Resources/app.ico"
        Background="{DynamicResource Surface}">

    <!-- DataContext wird über Code-Behind gesetzt -->

    <Window.Resources>
        <!-- Standard Converter -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Orange Statistics Styles -->
        
        <!-- Orange Statistics Card Style -->
        <Style x:Key="OrangeStatisticsCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceContainer}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Primary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="MinHeight" Value="140"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="{DynamicResource PrimaryColor}" 
                                     ShadowDepth="0" BlurRadius="10" Opacity="0.12"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Orange Metric Value Style -->
        <Style x:Key="OrangeMetricValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource Primary}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="{DynamicResource PrimaryColor}" 
                                     ShadowDepth="0" BlurRadius="4" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Orange Metric Label Style -->
        <Style x:Key="OrangeMetricLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{DynamicResource OnSurface}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
        </Style>
        
        <!-- Orange Progress Bar Style -->
        <Style x:Key="OrangeMetricProgress" TargetType="ProgressBar">
            <Setter Property="Height" Value="8"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="Background" Value="{DynamicResource SurfaceVariant}"/>
            <Setter Property="Foreground" Value="{DynamicResource Primary}"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- Orange Action Button Style -->
        <Style x:Key="OrangeStatisticsButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource Primary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Tertiary}"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="{DynamicResource PrimaryColor}" 
                                             ShadowDepth="0" BlurRadius="8" Opacity="0.3"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{DynamicResource OutlineVariant}"/>
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Orange Secondary Button Style -->
        <Style x:Key="OrangeStatisticsSecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SurfaceVariant}"/>
            <Setter Property="Foreground" Value="{DynamicResource Primary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Primary}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Primary}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Orange Content Card Style -->
        <Style x:Key="OrangeContentCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceContainer}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Outline}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" 
                                     ShadowDepth="0" BlurRadius="6" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Orange Section Title Style -->
        <Style x:Key="OrangeSectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource Primary}"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Orange Card Title Style -->
        <Style x:Key="OrangeCardTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource OnSurface}"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Orange Header -->
        <Border Grid.Row="0" CornerRadius="12" Padding="24" Margin="0,0,0,20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{DynamicResource PrimaryColor}" Offset="0"/>
                    <GradientStop Color="#FFB74D" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Header Icon & Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Width="56" Height="56" CornerRadius="28" 
                           Background="White" Opacity="0.95" Margin="0,0,20,0"
                           Effect="{StaticResource OrangeElevation2}">
                        <fa:ImageAwesome Icon="BarChart" Width="28" Height="28" 
                                       Foreground="{DynamicResource Primary}"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="📊 Einsatz-Statistiken" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                        <TextBlock Text="{Binding LastUpdateText}" 
                                   FontSize="14" 
                                   Foreground="White"
                                   Opacity="0.9"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Command="{Binding RefreshStatsCommand}" 
                           Style="{StaticResource OrangeStatisticsSecondaryButton}" 
                           Margin="0,0,12,0"
                           Background="White" 
                           Foreground="{DynamicResource Primary}"
                           BorderBrush="White">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Refresh" Width="16" Height="16" 
                                           Margin="0,0,8,0"/>
                            <TextBlock Text="Aktualisieren"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding ExportReportCommand}"
                           Style="{StaticResource OrangeStatisticsSecondaryButton}"
                           Background="White" 
                           Foreground="{DynamicResource Primary}"
                           BorderBrush="White">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Download" Width="16" Height="16" 
                                           Margin="0,0,8,0"/>
                            <TextBlock Text="Export"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- Quick Metrics Row -->
                <TextBlock Text="📈 Übersicht" Style="{StaticResource OrangeSectionTitle}"/>
                
                <UniformGrid Columns="4" Margin="0,0,0,24">
                    <!-- Einsatzdauer -->
                    <Border Style="{StaticResource OrangeStatisticsCard}">
                        <StackPanel>
                            <Border Width="48" Height="48" CornerRadius="24" 
                                   Background="{DynamicResource Primary}" 
                                   HorizontalAlignment="Center" Margin="0,0,0,12">
                                <fa:ImageAwesome Icon="ClockOutline" Width="24" Height="24" 
                                               Foreground="White"/>
                            </Border>
                            <TextBlock Text="{Binding EinsatzdauerValue}" Style="{StaticResource OrangeMetricValue}"/>
                            <TextBlock Text="Einsatzdauer" Style="{StaticResource OrangeMetricLabel}"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Anzahl Teams -->
                    <Border Style="{StaticResource OrangeStatisticsCard}">
                        <StackPanel>
                            <Border Width="48" Height="48" CornerRadius="24" 
                                   Background="{DynamicResource Secondary}" 
                                   HorizontalAlignment="Center" Margin="0,0,0,12">
                                <fa:ImageAwesome Icon="Users" Width="24" Height="24" 
                                               Foreground="White"/>
                            </Border>
                            <TextBlock Text="{Binding AnzahlTeamsValue}" Style="{StaticResource OrangeMetricValue}"/>
                            <TextBlock Text="Teams Gesamt" Style="{StaticResource OrangeMetricLabel}"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Aktive Teams -->
                    <Border Style="{StaticResource OrangeStatisticsCard}">
                        <StackPanel>
                            <Border Width="48" Height="48" CornerRadius="24" 
                                   Background="{DynamicResource Success}" 
                                   HorizontalAlignment="Center" Margin="0,0,0,12">
                                <fa:ImageAwesome Icon="Play" Width="24" Height="24" 
                                               Foreground="White"/>
                            </Border>
                            <TextBlock Text="{Binding AktiveTeamsValue}" Style="{StaticResource OrangeMetricValue}"/>
                            <TextBlock Text="Teams Aktiv" Style="{StaticResource OrangeMetricLabel}"/>
                            <ProgressBar Value="{Binding TeamAuslastungProgress}" Maximum="100"
                                        Style="{StaticResource OrangeMetricProgress}"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Durchschnittszeit -->
                    <Border Style="{StaticResource OrangeStatisticsCard}">
                        <StackPanel>
                            <Border Width="48" Height="48" CornerRadius="24" 
                                   Background="{DynamicResource Tertiary}" 
                                   HorizontalAlignment="Center" Margin="0,0,0,12">
                                <fa:ImageAwesome Icon="Calculator" Width="24" Height="24" 
                                               Foreground="White"/>
                            </Border>
                            <TextBlock Text="{Binding DurchschnittszeitValue}" Style="{StaticResource OrangeMetricValue}"/>
                            <TextBlock Text="⌀ Einsatzzeit" Style="{StaticResource OrangeMetricLabel}"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!-- Team Performance Section -->
                <TextBlock Text="🏆 Team-Performance" Style="{StaticResource OrangeSectionTitle}"/>
                
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Team Rankings -->
                    <Border Grid.Column="0" Style="{StaticResource OrangeContentCard}" Margin="0,0,12,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <Border Width="32" Height="32" CornerRadius="16" 
                                       Background="{DynamicResource Primary}" Margin="0,0,12,0">
                                    <fa:ImageAwesome Icon="Trophy" Width="16" Height="16" 
                                                   Foreground="White"/>
                                </Border>
                                <TextBlock Text="Team-Rankings" Style="{StaticResource OrangeCardTitle}" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <ListView ItemsSource="{Binding TeamRankings}" 
                                     MaxHeight="320"
                                     Background="Transparent"
                                     BorderThickness="0">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource SurfaceVariant}" 
                                               CornerRadius="8" Padding="12" Margin="0,2">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="80"/>
                                                    <ColumnDefinition Width="60"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <Border Grid.Column="0" Background="{DynamicResource Primary}"
                                                       Width="24" Height="24" CornerRadius="12">
                                                    <TextBlock Text="{Binding Rank}" 
                                                             Foreground="White" FontWeight="Bold" 
                                                             HorizontalAlignment="Center" VerticalAlignment="Center"
                                                             FontSize="12"/>
                                                </Border>
                                                <TextBlock Grid.Column="1" Text="{Binding TeamName}" 
                                                          VerticalAlignment="Center" Margin="8,0,0,0"/>
                                                <TextBlock Grid.Column="2" Text="{Binding Einsatzzeit}" 
                                                          VerticalAlignment="Center" FontFamily="Consolas"/>
                                                <Border Grid.Column="3" Background="{Binding StatusColor}" 
                                                       CornerRadius="12" Padding="8,4">
                                                    <TextBlock Text="{Binding Status}" Foreground="White" 
                                                              FontSize="10" HorizontalAlignment="Center" FontWeight="Bold"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Border>
                    
                    <!-- Team Type Distribution -->
                    <Border Grid.Column="1" Style="{StaticResource OrangeContentCard}" Margin="12,0,0,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <Border Width="32" Height="32" CornerRadius="16" 
                                       Background="{DynamicResource Secondary}" Margin="0,0,12,0">
                                    <fa:ImageAwesome Icon="PieChart" Width="16" Height="16" 
                                                   Foreground="White"/>
                                </Border>
                                <TextBlock Text="Team-Type Verteilung" Style="{StaticResource OrangeCardTitle}" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <ItemsControl ItemsSource="{Binding TeamTypeDistribution}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource SurfaceVariant}" 
                                               CornerRadius="8" Padding="12" Margin="0,4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="60"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding TeamType}" 
                                                             FontWeight="SemiBold" 
                                                             Foreground="{DynamicResource OnSurface}"/>
                                                    <ProgressBar Value="{Binding Percentage}" Maximum="100" 
                                                               Height="8" Margin="0,4,0,2" 
                                                               Background="{DynamicResource Surface}"
                                                               Foreground="{Binding Color}"/>
                                                    <TextBlock Text="{Binding DetailText}" FontSize="11" 
                                                              Foreground="{DynamicResource OnSurfaceVariant}"/>
                                                </StackPanel>
                                                <Border Grid.Column="1" Background="{Binding Color}"
                                                       Width="36" Height="36" CornerRadius="18"
                                                       VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Count}" 
                                                             Foreground="White" FontWeight="Bold" 
                                                             HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Recommendations Section -->
                <TextBlock Text="💡 Empfehlungen" Style="{StaticResource OrangeSectionTitle}"/>
                
                <Border Style="{StaticResource OrangeContentCard}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Width="32" Height="32" CornerRadius="16" 
                                   Background="{DynamicResource Warning}" Margin="0,0,12,0">
                                <fa:ImageAwesome Icon="Lightbulb" Width="16" Height="16" 
                                               Foreground="White"/>
                            </Border>
                            <TextBlock Text="Intelligente Empfehlungen" Style="{StaticResource OrangeCardTitle}" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <ItemsControl ItemsSource="{Binding Recommendations}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource SurfaceVariant}" 
                                           CornerRadius="8" Margin="0,0,0,8" Padding="16">
                                        <StackPanel Orientation="Horizontal">
                                            <Border Background="{Binding Priority}" Width="4" Height="48" 
                                                   CornerRadius="2" Margin="0,0,16,0"/>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Title}" 
                                                         FontWeight="SemiBold" FontSize="14"
                                                         Foreground="{DynamicResource OnSurface}"/>
                                                <TextBlock Text="{Binding Description}" 
                                                         Foreground="{DynamicResource OnSurfaceVariant}"
                                                         TextWrapping="Wrap" Margin="0,4,0,0"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Timeline Section -->
                <TextBlock Text="📅 Einsatz-Timeline" Style="{StaticResource OrangeSectionTitle}"/>
                
                <Border Style="{StaticResource OrangeContentCard}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Width="32" Height="32" CornerRadius="16" 
                                   Background="{DynamicResource Tertiary}" Margin="0,0,12,0">
                                <fa:ImageAwesome Icon="Timeline" Width="16" Height="16" 
                                               Foreground="White"/>
                            </Border>
                            <TextBlock Text="Chronologische Ereignisse" Style="{StaticResource OrangeCardTitle}" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding TimelineEvents}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding EventColor}" CornerRadius="12" 
                                               Margin="6" Padding="12" MinWidth="140">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Time}" FontWeight="Bold" 
                                                          Foreground="White" HorizontalAlignment="Center"
                                                          FontSize="16"/>
                                                <TextBlock Text="{Binding EventType}" 
                                                          Foreground="White" HorizontalAlignment="Center" 
                                                          FontSize="12" Opacity="0.9" Margin="0,2,0,0"/>
                                                <TextBlock Text="{Binding TeamName}" 
                                                          Foreground="White" HorizontalAlignment="Center" 
                                                          FontSize="11" Opacity="0.8" Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Loading Indicator für Refresh -->
                <Border Background="{DynamicResource PrimaryContainer}" 
                       CornerRadius="8" Padding="16" 
                       Visibility="{Binding IsRefreshing, Converter={StaticResource BooleanToVisibilityConverter}}"
                       HorizontalAlignment="Center" Margin="0,16,0,0">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Spinner" 
                                       Width="20" Height="20" 
                                       Foreground="{DynamicResource Primary}"
                                       Margin="0,0,12,0">
                            <fa:ImageAwesome.RenderTransform>
                                <RotateTransform x:Name="SpinnerRotate"/>
                            </fa:ImageAwesome.RenderTransform>
                            <fa:ImageAwesome.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="SpinnerRotate"
                                                           Storyboard.TargetProperty="Angle"
                                                           From="0" To="360" Duration="0:0:1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </fa:ImageAwesome.Triggers>
                        </fa:ImageAwesome>
                        <TextBlock Text="Statistiken werden aktualisiert..." 
                                  FontSize="14" FontWeight="SemiBold"
                                  Foreground="{DynamicResource Primary}" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
