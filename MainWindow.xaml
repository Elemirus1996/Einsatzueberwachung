                                    <!-- Dynamic Margin basierend auf ThreadDepth -->
                                    <Border.Margin>
                                        <MultiBinding Converter="{StaticResource ThreadMarginConverter}">
                                            <Binding Path="ThreadDepth"/>
                                            <Binding Source="0"/>
