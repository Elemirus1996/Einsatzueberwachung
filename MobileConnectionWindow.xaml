<Window x:Class="Einsatzueberwachung.MobileConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        Title="ðŸ“± Mobile Verbindung - EinsatzÃ¼berwachung v1.5" 
        Height="671" Width="800"
        WindowStartupLocation="CenterOwner"
        Icon="pack://application:,,,/Resources/app.ico"
        Background="{DynamicResource SurfaceContainer}">

    <Window.Resources>
        <!-- Connection Status Styles -->
        <Style x:Key="StatusIndicator" TargetType="Border">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
        
        <!-- QR Code Container - UPDATED for Dark Mode -->
        <Style x:Key="QRContainer" TargetType="Border" BasedOn="{StaticResource Card}">
            <Setter Property="Background" Value="{DynamicResource Surface}"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - QR Code & Connection -->
        <Border Grid.Column="0" Style="{StaticResource Card}" Margin="0,0,10,0">
            <StackPanel>
                <!-- Header -->
                <Border CornerRadius="12,12,0,0" Margin="-20,-20,-20,20" Padding="20">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#FF7043" Offset="0"/>
                            <GradientStop Color="#F4511E" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <StackPanel Orientation="Horizontal">
                        <Border Width="48" Height="48" CornerRadius="24" 
                               Background="White" Opacity="0.9" Margin="0,0,12,0">
                            <fa:ImageAwesome Icon="Mobile" Width="24" Height="24" 
                                           Foreground="#F4511E"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="ðŸ“± Mobile Verbindung" Style="{StaticResource TitleLarge}"
                                      Foreground="White"/>
                            <StackPanel Orientation="Horizontal">
                                <Border x:Name="StatusIndicator" Style="{StaticResource StatusIndicator}" 
                                       Background="Red"/>
                                <TextBlock x:Name="StatusText" Text="Getrennt" 
                                          Style="{StaticResource BodyMedium}"
                                          Foreground="White" Opacity="0.9"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Connection Controls -->
                <StackPanel Margin="0,0,0,20">
                    <Button x:Name="StartServerButton" Click="StartServer_Click" 
                           Style="{StaticResource FilledButton}"
                           Background="#4CAF50"
                           Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Play" Width="16" Height="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Server starten"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="StopServerButton" Click="StopServer_Click" 
                           Style="{StaticResource OutlinedButton}" IsEnabled="False">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Stop" Width="16" Height="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Server stoppen"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- QR Code Section -->
                <Border x:Name="QRCodeContainer" Style="{StaticResource QRContainer}" 
                       Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="ðŸ“± QR-Code scannen" Style="{StaticResource TitleMedium}"
                                  Foreground="{DynamicResource OnSurface}" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                        
                        <!-- Real QR Code Display - UPDATED for Dark Mode -->
                        <Border Width="200" Height="200" Background="White" 
                                BorderBrush="Black" BorderThickness="1" CornerRadius="8">
                            <Image x:Name="QRCodeImage" Stretch="Uniform" Margin="10"/>
                        </Border>

                        <TextBlock x:Name="QRCodeUrl" Text="http://localhost:8080/mobile" 
                                  Style="{StaticResource BodySmall}"
                                  Foreground="{DynamicResource OnSurface}" HorizontalAlignment="Center" 
                                  Margin="0,12,0,0" TextAlignment="Center" TextWrapping="Wrap"/>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                            <Button Click="CopyUrl_Click" Style="{StaticResource TextButton}" Margin="0,0,4,0">
                                <StackPanel Orientation="Horizontal">
                                    <fa:ImageAwesome Icon="Copy" Width="12" Height="12" Margin="0,0,4,0"/>
                                    <TextBlock Text="URL kopieren" FontSize="12"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Click="OpenInBrowser_Click" Style="{StaticResource TextButton}" Margin="4,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <fa:ImageAwesome Icon="ExternalLink" Width="12" Height="12" Margin="0,0,4,0"/>
                                    <TextBlock Text="Browser" FontSize="12"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Connection Info -->
                <Border Style="{StaticResource Card}" Background="{DynamicResource SecondaryContainer}"
                       Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="â„¹ï¸ Verbindungsinfo" Style="{StaticResource TitleSmall}"
                                  Foreground="{DynamicResource OnSecondaryContainer}"/>
                        <TextBlock x:Name="ServerInfo" Text="Server gestoppt"
                                  Style="{StaticResource BodySmall}"
                                  Foreground="{DynamicResource OnSecondaryContainer}"
                                  Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Right Panel - Mobile Commands & Status -->
        <Border Grid.Column="1" Style="{StaticResource Card}" Margin="10,0,0,0">
            <StackPanel>
                <TextBlock Text="ðŸ“Š Mobile Status" Style="{StaticResource TitleMedium}"
                          Foreground="{DynamicResource OnSurface}" Margin="0,0,0,16"/>

                <!-- Connected Devices -->
                <Border Style="{StaticResource Card}" Background="{DynamicResource SurfaceVariant}"
                       Margin="0,0,0,16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <fa:ImageAwesome Icon="Users" Width="16" Height="16" 
                                           Foreground="{DynamicResource Primary}" Margin="0,0,8,0"/>
                            <TextBlock Text="Verbundene GerÃ¤te" Style="{StaticResource TitleSmall}"
                                      Foreground="{DynamicResource OnSurface}"/>
                        </StackPanel>
                        <TextBlock x:Name="ConnectedDevicesText" Text="Keine GerÃ¤te verbunden"
                                  Style="{StaticResource BodyMedium}"
                                  Foreground="{DynamicResource OnSurfaceVariant}"/>
                    </StackPanel>
                </Border>

                <!-- Recent Commands -->
                <TextBlock Text="ðŸ“Š Mobile Zugriffe" Style="{StaticResource TitleSmall}"
                          Foreground="{DynamicResource OnSurface}" Margin="0,0,0,8"/>
                
                <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="AccessLogPanel">
                        <Border Background="{DynamicResource SurfaceVariant}" 
                               CornerRadius="8" Margin="0,0,0,4" Padding="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <fa:ImageAwesome Grid.Column="0" Icon="Eye" 
                                               Width="16" Height="16" 
                                               Foreground="{DynamicResource Primary}" 
                                               Margin="0,0,8,0" VerticalAlignment="Center"/>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Read-Only Zugriff" 
                                              Style="{StaticResource BodyMedium}"
                                              Foreground="{DynamicResource OnSurface}"/>
                                    <TextBlock Text="Mobile GerÃ¤te kÃ¶nnen nur Daten einsehen" 
                                              Style="{StaticResource BodySmall}"
                                              Foreground="{DynamicResource OnSurfaceVariant}"/>
                                </StackPanel>
                                
                                <TextBlock Grid.Column="2" Text="Sicher" 
                                          Style="{StaticResource BodySmall}"
                                          Foreground="{DynamicResource Success}"
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- Statistics -->
                <TextBlock Text="ðŸ“ˆ Mobile Statistiken" Style="{StaticResource TitleSmall}"
                          Foreground="{DynamicResource OnSurface}" Margin="0,20,0,8"/>
                
                <UniformGrid Columns="2" Margin="0,0,0,16">
                    <Border Style="{StaticResource Card}" 
                           Margin="0,0,4,0" Padding="16">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#FF7043" Offset="0"/>
                                <GradientStop Color="#F4511E" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel>
                            <TextBlock x:Name="TotalViewsValue" Text="0" 
                                      Style="{StaticResource TitleLarge}"
                                      Foreground="White"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Text="Seitenaufrufe" Style="{StaticResource BodySmall}"
                                      Foreground="White"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Style="{StaticResource Card}" 
                           Margin="4,0,0,0" Padding="16"
                           Background="#4CAF50">
                        <StackPanel>
                            <TextBlock x:Name="ActiveViewersValue" Text="0" 
                                      Style="{StaticResource TitleLarge}"
                                      Foreground="White"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Text="Aktive Betrachter" Style="{StaticResource BodySmall}"
                                      Foreground="White"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <!-- Quick Actions -->
                <TextBlock Text="âš¡ Schnellaktionen" Style="{StaticResource TitleSmall}"
                          Foreground="{DynamicResource OnSurface}" Margin="0,0,0,8"/>
                
                <StackPanel>
                    <Button Click="TestConnection_Click" Style="{StaticResource OutlinedButton}"
                           Margin="0,0,0,4">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Wifi" Width="16" Height="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Verbindung testen"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Click="TestAPI_Click" Style="{StaticResource OutlinedButton}"
                           Margin="0,0,0,4">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Cog" Width="16" Height="16" Margin="0,0,8,0"/>
                            <TextBlock Text="API Test"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Click="SystemDiagnose_Click" Style="{StaticResource OutlinedButton}"
                           Margin="0,0,0,4">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Stethoscope" Width="16" Height="16" Margin="0,0,8,0"/>
                            <TextBlock Text="System-Diagnose"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Click="AddNetshButton_Click" Style="{StaticResource OutlinedButton}"
                           Margin="0,0,0,4">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Shield" Width="16" Height="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Netzwerk konfigurieren"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Click="NonAdminHelp_Click" Style="{StaticResource OutlinedButton}"
                           Margin="0,0,0,4">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="User" Width="16" Height="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Ohne Admin-Rechte"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Click="CleanupNetwork_Click" Style="{StaticResource TextButton}"
                           Margin="0,0,0,4">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="Trash" Width="16" Height="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Netzwerk bereinigen"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Click="OpenInBrowser_Click" Style="{StaticResource TextButton}" Margin="0,0,0,4">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="ExternalLink" Width="16" Height="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Im Browser Ã¶ffnen"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="MinimizeButton" Click="MinimizeWindow_Click" Style="{StaticResource TextButton}">
                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome Icon="WindowMinimize" Width="16" Height="16" Margin="0,0,8,0"/>
                            <TextBlock Text="Minimieren (Server lÃ¤uft weiter)"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
