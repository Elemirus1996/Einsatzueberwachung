<Window x:Class="Einsatzueberwachung.UpdateNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        Title="Update verfügbar - Einsatzüberwachung Professional"
        Width="600" Height="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource Surface}"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <!-- Update-spezifische Styles -->
        <Style TargetType="TextBlock" x:Key="UpdateHeaderStyle">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource Primary}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style TargetType="TextBlock" x:Key="UpdateInfoStyle">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{DynamicResource OnSurface}"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
        
        <Style TargetType="Button" x:Key="UpdateButtonStyle">
            <Setter Property="Background" Value="{DynamicResource Primary}"/>
            <Setter Property="Foreground" Value="{DynamicResource OnPrimary}"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header mit Icon -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <fa:ImageAwesome Icon="Download" 
                           Width="32" Height="32" 
                           Foreground="{DynamicResource Primary}" 
                           VerticalAlignment="Center" 
                           Margin="0,0,15,0"/>
            <StackPanel>
                <TextBlock Text="Update verfügbar!" 
                          Style="{StaticResource UpdateHeaderStyle}"/>
                <TextBlock Text="Eine neue Version der Einsatzüberwachung Professional ist verfügbar." 
                          Style="{StaticResource UpdateInfoStyle}"/>
            </StackPanel>
        </StackPanel>

        <!-- Version-Informationen -->
        <Border Grid.Row="1" 
                Background="{DynamicResource SurfaceVariant}" 
                CornerRadius="8" 
                Padding="15" 
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Aktuelle Version -->
                <TextBlock Grid.Row="0" Grid.Column="0" 
                          Text="Aktuelle Version:" 
                          FontWeight="SemiBold" 
                          Style="{StaticResource UpdateInfoStyle}"/>
                <TextBlock x:Name="TxtCurrentVersion" 
                          Grid.Row="0" Grid.Column="1" 
                          Text="1.6.0" 
                          Style="{StaticResource UpdateInfoStyle}"/>

                <!-- Neue Version -->
                <TextBlock Grid.Row="1" Grid.Column="0" 
                          Text="Neue Version:" 
                          FontWeight="SemiBold" 
                          Style="{StaticResource UpdateInfoStyle}"/>
                <TextBlock x:Name="TxtNewVersion" 
                          Grid.Row="1" Grid.Column="1" 
                          Text="1.6.1" 
                          Foreground="{DynamicResource Primary}"
                          FontWeight="SemiBold"
                          Style="{StaticResource UpdateInfoStyle}"/>

                <!-- Release-Datum -->
                <TextBlock Grid.Row="2" Grid.Column="0" 
                          Text="Veröffentlicht:" 
                          FontWeight="SemiBold" 
                          Style="{StaticResource UpdateInfoStyle}"/>
                <TextBlock x:Name="TxtReleaseDate" 
                          Grid.Row="2" Grid.Column="1" 
                          Text="15.01.2024" 
                          Style="{StaticResource UpdateInfoStyle}"/>

                <!-- Download-Größe -->
                <TextBlock Grid.Row="3" Grid.Column="0" 
                          Text="Download-Größe:" 
                          FontWeight="SemiBold" 
                          Style="{StaticResource UpdateInfoStyle}"/>
                <TextBlock x:Name="TxtFileSize" 
                          Grid.Row="3" Grid.Column="1" 
                          Text="52 MB" 
                          Style="{StaticResource UpdateInfoStyle}"/>
            </Grid>
        </Border>

        <!-- Release Notes -->
        <GroupBox Grid.Row="2" 
                  Header="Was ist neu?" 
                  Margin="0,0,0,15"
                  Background="Transparent"
                  BorderBrush="{DynamicResource Outline}">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                         MaxHeight="200">
                <TextBlock x:Name="TxtReleaseNotes" 
                          Text="🚀 Verbesserte Mobile Server Stabilität&#x0a;🔧 Automatische Firewall-Konfiguration&#x0a;📱 Erweiterte iPhone-Kompatibilität&#x0a;🛡️ Sicherheits-Updates"
                          TextWrapping="Wrap" 
                          LineHeight="20"
                          Style="{StaticResource UpdateInfoStyle}"/>
            </ScrollViewer>
        </GroupBox>

        <!-- Progress Bar -->
        <StackPanel Grid.Row="3" 
                    x:Name="ProgressPanel" 
                    Visibility="Collapsed" 
                    Margin="0,0,0,15">
            <TextBlock x:Name="TxtProgress" 
                      Text="Download wird vorbereitet..." 
                      HorizontalAlignment="Center" 
                      Style="{StaticResource UpdateInfoStyle}" 
                      Margin="0,0,0,5"/>
            <ProgressBar x:Name="ProgressUpdate" 
                        Height="6" 
                        Background="{DynamicResource SurfaceVariant}" 
                        Foreground="{DynamicResource Primary}" 
                        BorderThickness="0"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            
            <!-- Release Notes Online anzeigen -->
            <Button x:Name="BtnShowReleaseNotes" 
                    Content="📋 Vollständige Release Notes" 
                    Style="{StaticResource UpdateButtonStyle}"
                    Background="{DynamicResource Secondary}"
                    Foreground="{DynamicResource OnSurface}"
                    Click="BtnShowReleaseNotes_Click"/>
            
            <!-- Später erinnern -->
            <Button x:Name="BtnRemindLater" 
                    Content="⏰ Später erinnern" 
                    Style="{StaticResource UpdateButtonStyle}"
                    Background="{DynamicResource SurfaceVariant}"
                    Foreground="{DynamicResource OnSurface}"
                    Click="BtnRemindLater_Click"/>
            
            <!-- Update überspringen -->
            <Button x:Name="BtnSkipUpdate" 
                    Content="❌ Überspringen" 
                    Style="{StaticResource UpdateButtonStyle}"
                    Background="{DynamicResource SurfaceVariant}"
                    Foreground="{DynamicResource OnSurface}"
                    Click="BtnSkipUpdate_Click"/>
            
            <!-- Update herunterladen -->
            <Button x:Name="BtnDownloadUpdate" 
                    Content="⬇️ Update herunterladen" 
                    Style="{StaticResource UpdateButtonStyle}"
                    Click="BtnDownloadUpdate_Click"/>
        </StackPanel>
    </Grid>
</Window>
