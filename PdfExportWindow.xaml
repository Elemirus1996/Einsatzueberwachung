<Window x:Class="Einsatzueberwachung.PdfExportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PDF-Export - Einsatzdokumentation"
        Height="700" Width="600"
        Background="{DynamicResource Surface}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceVariant}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource OnSurface}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource OnSurfaceVariant}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource Surface}"/>
            <Setter Property="Foreground" Value="{DynamicResource OnSurface}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Outline}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="36"/>
        </Style>

        <!-- DatePicker Style -->
        <Style x:Key="InputDatePickerStyle" TargetType="DatePicker">
            <Setter Property="Background" Value="{DynamicResource Surface}"/>
            <Setter Property="Foreground" Value="{DynamicResource OnSurface}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Outline}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="36"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="📄 PDF-Export konfigurieren" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="{DynamicResource OnSurface}"/>
            <TextBlock Text="Wählen Sie die Informationen, die im PDF-Dokument enthalten sein sollen" 
                       FontSize="13" 
                       Foreground="{DynamicResource OnSurfaceVariant}"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Inhalt -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Margin="0,20,0,0">
            <StackPanel>
                <!-- Einsatznummer -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <CheckBox x:Name="ChkEinsatzNummer"
                                  Content="Einsatznummer"
                                  IsChecked="True"
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Foreground="{DynamicResource OnSurface}"
                                  Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Interne Einsatznummer / Aktenzeichen" 
                                   Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="TxtEinsatzNummer"
                                 Style="{StaticResource InputTextBoxStyle}"
                                 IsEnabled="{Binding IsChecked, ElementName=ChkEinsatzNummer}"/>
                    </StackPanel>
                </Border>

                <!-- Alarmierende Organisation -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <CheckBox x:Name="ChkAlarmierendeOrg"
                                  Content="Alarmierende Organisation"
                                  IsChecked="True"
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Foreground="{DynamicResource OnSurface}"
                                  Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Z.B. Polizei, Feuerwehr, THW" 
                                   Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="TxtAlarmierendeOrg"
                                 Style="{StaticResource InputTextBoxStyle}"
                                 IsEnabled="{Binding IsChecked, ElementName=ChkAlarmierendeOrg}"/>
                    </StackPanel>
                </Border>

                <!-- Staffelname -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <CheckBox x:Name="ChkStaffelName"
                                  Content="Staffelname"
                                  IsChecked="True"
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Foreground="{DynamicResource OnSurface}"
                                  Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Name Ihrer Rettungshunde-Staffel" 
                                   Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="TxtStaffelName"
                                 Style="{StaticResource InputTextBoxStyle}"
                                 IsEnabled="{Binding IsChecked, ElementName=ChkStaffelName}"/>
                    </StackPanel>
                </Border>

                <!-- Logo -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <CheckBox x:Name="ChkLogo"
                                  Content="Staffel-Logo"
                                  IsChecked="False"
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Foreground="{DynamicResource OnSurface}"
                                  Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Logo-Datei auswählen (PNG, JPG)" 
                                   Style="{StaticResource LabelStyle}"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox x:Name="TxtLogoPfad"
                                     Grid.Column="0"
                                     Style="{StaticResource InputTextBoxStyle}"
                                     IsReadOnly="True"
                                     IsEnabled="{Binding IsChecked, ElementName=ChkLogo}"/>
                            
                            <Button x:Name="BtnSelectLogo"
                                    Grid.Column="1"
                                    Content="📁 Durchsuchen"
                                    Background="{DynamicResource Primary}"
                                    Foreground="{DynamicResource OnPrimary}"
                                    BorderThickness="0"
                                    Padding="15,8"
                                    Margin="10,0,0,0"
                                    FontSize="12"
                                    Cursor="Hand"
                                    Click="BtnSelectLogo_Click"
                                    IsEnabled="{Binding IsChecked, ElementName=ChkLogo}"/>
                        </Grid>

                        <!-- Logo-Vorschau -->
                        <Image x:Name="ImgLogoPreview"
                               MaxHeight="80"
                               MaxWidth="200"
                               Margin="0,10,0,0"
                               HorizontalAlignment="Left"
                               Visibility="Collapsed"/>
                    </StackPanel>
                </Border>

                <!-- Alarmierungszeit -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <CheckBox x:Name="ChkAlarmierungsZeit"
                                  Content="Alarmierungszeit"
                                  IsChecked="True"
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Foreground="{DynamicResource OnSurface}"
                                  Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Wann wurde alarmiert?" 
                                   Style="{StaticResource LabelStyle}"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            
                            <DatePicker x:Name="DpAlarmierungsDatum"
                                        Grid.Column="0"
                                        Style="{StaticResource InputDatePickerStyle}"
                                        IsEnabled="{Binding IsChecked, ElementName=ChkAlarmierungsZeit}"/>
                            
                            <TextBox x:Name="TxtAlarmierungsZeit"
                                     Grid.Column="2"
                                     Style="{StaticResource InputTextBoxStyle}"
                                     IsEnabled="{Binding IsChecked, ElementName=ChkAlarmierungsZeit}"
                                     Text="00:00"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Einsatz-Chronologie -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <CheckBox x:Name="ChkTimeline"
                                  Content="Einsatz-Chronologie einschließen"
                                  IsChecked="True"
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Foreground="{DynamicResource OnSurface}"/>
                        <TextBlock Text="Zeitleiste aller Ereignisse und Notizen" 
                                   Style="{StaticResource LabelStyle}"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            
            <Button x:Name="BtnAbbrechen"
                    Content="Abbrechen"
                    Width="120"
                    Height="40"
                    Background="{DynamicResource Surface}"
                    Foreground="{DynamicResource OnSurface}"
                    BorderBrush="{DynamicResource Outline}"
                    BorderThickness="1"
                    FontSize="14"
                    Cursor="Hand"
                    Click="BtnAbbrechen_Click"
                    Margin="0,0,10,0"/>
            
            <Button x:Name="BtnExport"
                    Content="📄 PDF erstellen"
                    Width="150"
                    Height="40"
                    Background="{DynamicResource Primary}"
                    Foreground="{DynamicResource OnPrimary}"
                    BorderThickness="0"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Cursor="Hand"
                    Click="BtnExport_Click"/>
        </StackPanel>
    </Grid>
</Window>
