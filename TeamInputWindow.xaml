<Window x:Class="Einsatzueberwachung.TeamInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        Title="Team-Details eingeben" Height="740" Width="480"
        WindowStartupLocation="CenterOwner"
        Icon="pack://application:,,,/Resources/app.ico"
        ResizeMode="NoResize"
        Background="{DynamicResource SurfaceContainer}">

    <Window.Resources>
        <!-- ComboBox Style fÃ¼r Hell/Dunkel-Modus -->
        <Style x:Key="MasterDataComboBox" TargetType="ComboBox" BasedOn="{StaticResource ComboBoxStyle}">
            <Setter Property="Height" Value="40"/>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ðŸŽ¯ Header Section -->
        <Border Grid.Row="0" Style="{StaticResource Card}" 
               Margin="0,0,0,20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF7043" Offset="0"/>
                    <GradientStop Color="#F4511E" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Icon -->
                <Border Width="56" Height="56" CornerRadius="28" 
                       Background="White" Opacity="0.9" Margin="0,0,16,0">
                    <fa:ImageAwesome Icon="UserPlus" Width="28" Height="28" 
                                   Foreground="#F4511E"/>
                </Border>
                
                <!-- Title -->
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Neues Team erstellen" Style="{StaticResource HeadlineSmall}"
                              Foreground="White"/>
                    <TextBlock Text="Team-Details eingeben (mit Stammdaten)" Style="{StaticResource BodyMedium}"
                              Foreground="White" Opacity="0.9"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- ðŸ’¡ Information Panel -->
        <Border Grid.Row="1" Style="{StaticResource Card}" 
               Background="{DynamicResource SuccessContainer}"
               BorderBrush="{DynamicResource Success}" BorderThickness="1"
               Margin="0,0,0,20">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <fa:ImageAwesome Icon="InfoCircle" Width="16" Height="16" 
                                   Foreground="{DynamicResource Success}" Margin="0,0,8,0"/>
                    <TextBlock Text="Teamname" Style="{StaticResource TitleSmall}"
                              Foreground="{DynamicResource OnSuccessContainer}"/>
                </StackPanel>
                
                <TextBlock TextWrapping="Wrap" Style="{StaticResource BodySmall}"
                          Foreground="{DynamicResource OnSuccessContainer}" LineHeight="18">
                    <Run Text="Der Teamname wird automatisch als"/>
                    <Run Text="'Team [Hundename]'" FontWeight="Bold"/>
                    <Run Text="generiert. WÃ¤hlen Sie aus Stammdaten oder geben Sie manuell ein."/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- ðŸ“ Input Form -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Hundename (Required) - mit Stammdaten-Auswahl -->
                <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <fa:ImageAwesome Icon="Paw" Width="16" Height="16" 
                                           Foreground="{DynamicResource Primary}" Margin="0,0,8,0"/>
                            <TextBlock Text="Hund *" Style="{StaticResource TitleSmall}"
                                      Foreground="{DynamicResource OnSurface}"/>
                        </StackPanel>
                        
                        <ComboBox x:Name="CmbHund" 
                                 Style="{StaticResource MasterDataComboBox}"
                                 SelectionChanged="CmbHund_SelectionChanged"
                                 IsEditable="True"
                                 DisplayMemberPath="Name"
                                 Margin="0,0,0,8"/>
                        
                        <TextBox x:Name="TxtHundName" Style="{StaticResource TextField}"
                                Text="" Visibility="Collapsed"
                                TextChanged="TxtHundName_TextChanged"/>
                        
                        <!-- Preview -->
                        <TextBlock x:Name="TxtTeamNamePreview" Text="Teamname: Team [Hundename]" 
                                  Style="{StaticResource BodySmall}"
                                  Foreground="{DynamicResource OnSurfaceVariant}" 
                                  Margin="0,8,0,0"
                                  FontStyle="Italic"/>
                    </StackPanel>
                </Border>

                <!-- HundefÃ¼hrer - mit Stammdaten-Auswahl -->
                <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <fa:ImageAwesome Icon="User" Width="16" Height="16" 
                                           Foreground="{DynamicResource Primary}" Margin="0,0,8,0"/>
                            <TextBlock Text="HundefÃ¼hrer" Style="{StaticResource TitleSmall}"
                                      Foreground="{DynamicResource OnSurface}"/>
                        </StackPanel>
                        
                        <ComboBox x:Name="CmbHundefuehrer" 
                                 Style="{StaticResource MasterDataComboBox}"
                                 SelectionChanged="CmbHundefuehrer_SelectionChanged"
                                 IsEditable="True"
                                 DisplayMemberPath="FullName"/>
                        
                        <TextBox x:Name="TxtHundefuehrer" Style="{StaticResource TextField}"
                                Text="" Visibility="Collapsed"/>
                    </StackPanel>
                </Border>

                <!-- Helfer - mit Stammdaten-Auswahl -->
                <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <fa:ImageAwesome Icon="Users" Width="16" Height="16" 
                                           Foreground="{DynamicResource Primary}" Margin="0,0,8,0"/>
                            <TextBlock Text="Helfer (optional)" Style="{StaticResource TitleSmall}"
                                      Foreground="{DynamicResource OnSurface}"/>
                        </StackPanel>
                        
                        <ComboBox x:Name="CmbHelfer" 
                                 Style="{StaticResource MasterDataComboBox}"
                                 SelectionChanged="CmbHelfer_SelectionChanged"
                                 IsEditable="True"
                                 DisplayMemberPath="FullName"/>
                        
                        <TextBox x:Name="TxtHelfer" Style="{StaticResource TextField}"
                                Text="" Visibility="Collapsed"/>
                    </StackPanel>
                </Border>

                <!-- Suchgebiet -->
                <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <fa:ImageAwesome Icon="MapMarker" Width="16" Height="16" 
                                           Foreground="{DynamicResource Primary}" Margin="0,0,8,0"/>
                            <TextBlock Text="Suchgebiet (optional)" Style="{StaticResource TitleSmall}"
                                      Foreground="{DynamicResource OnSurface}"/>
                        </StackPanel>
                        
                        <TextBox x:Name="TxtSuchgebiet" 
                                Style="{StaticResource TextField}"
                                Text=""
                                ToolTip="Zugewiesenes Suchgebiet (z.B. Sektor A, WaldstÃ¼ck Nord, etc.)"/>
                    </StackPanel>
                </Border>

                <!-- Spezialisierung Info -->
                <Border Style="{StaticResource Card}" Margin="0,0,0,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <fa:ImageAwesome Icon="Star" Width="16" Height="16" 
                                           Foreground="{DynamicResource Primary}" Margin="0,0,8,0"/>
                            <TextBlock Text="Team-Spezialisierung" Style="{StaticResource TitleSmall}"
                                      Foreground="{DynamicResource OnSurface}"/>
                        </StackPanel>
                        
                        <TextBlock x:Name="TxtSelectedSpecialization" 
                                  Text="Wird nach 'Weiter' ausgewÃ¤hlt" 
                                  Style="{StaticResource BodyMedium}"
                                  Foreground="{DynamicResource OnSurfaceVariant}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- ðŸŽ¬ Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" 
                   Margin="0,20,0,0">
            <Button Content="Abbrechen" Click="BtnCancel_Click" 
                   Style="{StaticResource OutlinedButton}" Margin="0,0,12,0"/>
               
            <Button x:Name="BtnNext" Click="BtnNext_Click" 
                   Style="{StaticResource FilledButton}" 
                   Background="{DynamicResource Primary}" Margin="12,0,0,0"
                   IsEnabled="False">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Team erstellen" Foreground="White"/>
                    <fa:ImageAwesome Icon="Check" Width="14" Height="14" 
                                   Foreground="White" Margin="8,0,0,0"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
