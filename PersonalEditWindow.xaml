<Window x:Class="Einsatzueberwachung.PersonalEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        Title="Personal bearbeiten"
        Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource Surface}"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceContainer}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource OutlineVariant}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
        </Style>

        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource SurfaceVariant}"/>
            <Setter Property="Foreground" Value="{DynamicResource OnSurface}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Outline}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource OnSurface}"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="ðŸ‘¤ Personal-Daten" FontSize="20" FontWeight="Bold" 
                          Foreground="{DynamicResource OnSurface}"/>
                <TextBlock Text="Erfassen Sie die Personalinformationen und FÃ¤higkeiten" 
                          FontSize="12" Foreground="{DynamicResource OnSurfaceVariant}" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="8">
                <!-- Basis-Informationen -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Basis-Informationen" FontSize="16" FontWeight="SemiBold" 
                                  Foreground="{DynamicResource OnSurface}" Margin="0,0,0,12"/>

                        <TextBlock Text="Vorname *" Foreground="{DynamicResource OnSurfaceVariant}"/>
                        <TextBox x:Name="TxtVorname" Style="{StaticResource InputStyle}" Margin="0,4,0,12"/>

                        <TextBlock Text="Nachname *" Foreground="{DynamicResource OnSurfaceVariant}"/>
                        <TextBox x:Name="TxtNachname" Style="{StaticResource InputStyle}" Margin="0,4,0,12"/>

                        <CheckBox x:Name="ChkActive" Content="Aktiv" 
                                 Style="{StaticResource CheckBoxStyle}" IsChecked="True"/>
                    </StackPanel>
                </Border>

                <!-- FÃ¤higkeiten -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="FÃ¤higkeiten" FontSize="16" FontWeight="SemiBold" 
                                  Foreground="{DynamicResource OnSurface}" Margin="0,0,0,12"/>
                        <TextBlock Text="WÃ¤hlen Sie eine oder mehrere FÃ¤higkeiten aus:" 
                                  FontSize="12" Foreground="{DynamicResource OnSurfaceVariant}" 
                                  Margin="0,0,0,8" TextWrapping="Wrap"/>

                        <CheckBox x:Name="ChkHundefuehrer" Content="HundefÃ¼hrer" 
                                 Style="{StaticResource CheckBoxStyle}"/>
                        <CheckBox x:Name="ChkHelfer" Content="Helfer" 
                                 Style="{StaticResource CheckBoxStyle}"/>
                        <CheckBox x:Name="ChkFuehrungsassistent" Content="FÃ¼hrungsassistent" 
                                 Style="{StaticResource CheckBoxStyle}"/>
                        <CheckBox x:Name="ChkGruppenfuehrer" Content="GruppenfÃ¼hrer" 
                                 Style="{StaticResource CheckBoxStyle}"/>
                        <CheckBox x:Name="ChkZugfuehrer" Content="ZugfÃ¼hrer" 
                                 Style="{StaticResource CheckBoxStyle}"/>
                        <CheckBox x:Name="ChkVerbandsfuehrer" Content="VerbandsfÃ¼hrer" 
                                 Style="{StaticResource CheckBoxStyle}"/>
                        <CheckBox x:Name="ChkDrohnenpilot" Content="Drohnenpilot" 
                                 Style="{StaticResource CheckBoxStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Notizen -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Notizen" FontSize="16" FontWeight="SemiBold" 
                                  Foreground="{DynamicResource OnSurface}" Margin="0,0,0,12"/>
                        <TextBox x:Name="TxtNotizen" Style="{StaticResource InputStyle}" 
                                TextWrapping="Wrap" AcceptsReturn="True" Height="80"
                                VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="âœ“ Speichern" Click="BtnSave_Click" 
                       Width="120" Height="36" Margin="0,0,8,0"
                       Background="{DynamicResource Primary}" 
                       Foreground="{DynamicResource OnPrimary}"/>
                <Button Content="âœ— Abbrechen" Click="BtnCancel_Click" 
                       Width="120" Height="36"
                       Background="{DynamicResource Secondary}" 
                       Foreground="{DynamicResource OnSurface}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
