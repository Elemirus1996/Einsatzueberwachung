<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 🎨 PROFESSIONAL COLOR PALETTE - Orange-Focused Design System v1.9 -->
    
    <!-- 🧡 PRIMARY COLORS - NOW ORANGE-BASED! -->
    <SolidColorBrush x:Key="Primary" Color="#F57C00"/> <!-- Orange als Hauptfarbe -->
    <SolidColorBrush x:Key="PrimaryContainer" Color="#FFE0B2"/> <!-- Helles Orange Container -->
    <SolidColorBrush x:Key="OnPrimary" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="OnPrimaryContainer" Color="#E65100"/>
    
    <!-- Secondary Colors - Komplementäre Blau-Grau Töne -->
    <SolidColorBrush x:Key="Secondary" Color="#455A64"/> <!-- Blue Grey -->
    <SolidColorBrush x:Key="SecondaryContainer" Color="#CFD8DC"/>
    <SolidColorBrush x:Key="OnSecondary" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="OnSecondaryContainer" Color="#263238"/>
    
    <!-- Tertiary Colors - Verstärkte Orange-Variationen -->
    <SolidColorBrush x:Key="Tertiary" Color="#FF9800"/> <!-- Helleres Orange für Akzente -->
    <SolidColorBrush x:Key="TertiaryContainer" Color="#FFF3E0"/> <!-- Sehr helles Orange -->
    <SolidColorBrush x:Key="OnTertiary" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="OnTertiaryContainer" Color="#F57C00"/>
    
    <!-- Surface Colors -->
    <SolidColorBrush x:Key="Surface" Color="#FEFEFE"/> <!-- Fast weiß für besseren Kontrast -->
    <SolidColorBrush x:Key="SurfaceVariant" Color="#F5F5F5"/> <!-- Hellgrau -->
    <SolidColorBrush x:Key="SurfaceContainer" Color="#F0F0F0"/> <!-- Etwas dunkler grau -->
    <SolidColorBrush x:Key="SurfaceContainerHigh" Color="#EBEBEB"/> <!-- Mittlerer Grauton -->
    <SolidColorBrush x:Key="SurfaceContainerHighest" Color="#E5E5E5"/> <!-- Dunkler Grauton -->
    <SolidColorBrush x:Key="OnSurface" Color="#1A1C1E"/>
    <SolidColorBrush x:Key="OnSurfaceVariant" Color="#44474A"/>
    
    <!-- Outline Colors -->
    <SolidColorBrush x:Key="Outline" Color="#74777A"/>
    <SolidColorBrush x:Key="OutlineVariant" Color="#C4C7CA"/>
    
    <!-- Semantic Colors mit Orange-Harmonien -->
    <SolidColorBrush x:Key="Success" Color="#4CAF50"/> <!-- Grün bleibt für Erfolg -->
    <SolidColorBrush x:Key="SuccessContainer" Color="#E8F5E8"/>
    <SolidColorBrush x:Key="OnSuccess" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="OnSuccessContainer" Color="#2E7D32"/>
    
    <SolidColorBrush x:Key="Warning" Color="#FF9800"/> <!-- Orange für Warnungen -->
    <SolidColorBrush x:Key="WarningContainer" Color="#FFF3E0"/>
    <SolidColorBrush x:Key="OnWarning" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="OnWarningContainer" Color="#E65100"/>
    
    <SolidColorBrush x:Key="Error" Color="#F44336"/> <!-- Rot bleibt für Fehler -->
    <SolidColorBrush x:Key="ErrorContainer" Color="#FFEBEE"/>
    <SolidColorBrush x:Key="OnError" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="OnErrorContainer" Color="#C62828"/>
    
    <!-- 🚨 Emergency Team Type Colors mit Orange-Harmonie -->
    <SolidColorBrush x:Key="FlächeColor" Color="#2196F3"/> <!-- Blau bleibt -->
    <SolidColorBrush x:Key="TrümmerColor" Color="#F57C00"/> <!-- Orange -->
    <SolidColorBrush x:Key="MantrailerColor" Color="#4CAF50"/> <!-- Grün -->
    <SolidColorBrush x:Key="WasserColor" Color="#00BCD4"/> <!-- Cyan -->
    <SolidColorBrush x:Key="LawineColor" Color="#9C27B0"/> <!-- Lila bleibt für Kontrast -->
    <SolidColorBrush x:Key="GeländeColor" Color="#795548"/> <!-- Braun für Gelände -->
    <SolidColorBrush x:Key="LeichenColor" Color="#607D8B"/> <!-- Blau-Grau -->
    <SolidColorBrush x:Key="AllgemeinColor" Color="#FF9800"/> <!-- Orange für Allgemein -->
    
    <!-- 💤 NEUTRAL COLORS - Für verbesserten Kontrast -->
    <SolidColorBrush x:Key="Neutral0" Color="#FFFFFF"/> <!-- Neutral Weiß -->
    <SolidColorBrush x:Key="Neutral1" Color="#F5F5F5"/> <!-- Sehr helles Grau -->
    <SolidColorBrush x:Key="Neutral2" Color="#EEEEEE"/> <!-- Helles Grau -->
    <SolidColorBrush x:Key="Neutral3" Color="#E0E0E0"/> <!-- Mittelgrau -->
    <SolidColorBrush x:Key="Neutral4" Color="#BDBDBD"/> <!-- Dunkelgrau -->
    <SolidColorBrush x:Key="Neutral5" Color="#9E9E9E"/> <!-- Sehr dunkles Grau -->
    <SolidColorBrush x:Key="Neutral6" Color="#757575"/> <!-- Grauton für Texte -->
    <SolidColorBrush x:Key="Neutral7" Color="#616161"/> <!-- Dunkles Grau für Texte -->
    
    <!-- 🌓 DARK THEME COLORS - Orange-optimiert -->
    
    <!-- Dark Primary Colors - Orange-basiert -->
    <SolidColorBrush x:Key="DarkPrimary" Color="#FFB74D"/> <!-- Helles Orange für Dark Mode -->
    <SolidColorBrush x:Key="DarkPrimaryContainer" Color="#E65100"/> <!-- Dunkles Orange Container -->
    <SolidColorBrush x:Key="DarkOnPrimary" Color="#1A0F00"/> <!-- Sehr dunkles Braun -->
    <SolidColorBrush x:Key="DarkOnPrimaryContainer" Color="#FFE0B2"/> <!-- Helles Orange-Beige -->
    
    <!-- Dark Secondary Colors -->
    <SolidColorBrush x:Key="DarkSecondary" Color="#B0BEC5"/>
    <SolidColorBrush x:Key="DarkSecondaryContainer" Color="#37474F"/>
    <SolidColorBrush x:Key="DarkOnSecondary" Color="#1C313A"/>
    <SolidColorBrush x:Key="DarkOnSecondaryContainer" Color="#CFD8DC"/>
    
    <!-- Dark Tertiary Colors - Verstärktes Orange -->
    <SolidColorBrush x:Key="DarkTertiary" Color="#FFCC80"/> <!-- Noch helleres Orange für Akzente -->
    <SolidColorBrush x:Key="DarkTertiaryContainer" Color="#F57C00"/> <!-- Orange Container -->
    <SolidColorBrush x:Key="DarkOnTertiary" Color="#2E1600"/> <!-- Dunkles Braun -->
    <SolidColorBrush x:Key="DarkOnTertiaryContainer" Color="#FFE0B2"/> <!-- Helles Orange-Beige -->
    
    <!-- Dark Surface Colors - Neutrales dunkles Design -->
    <SolidColorBrush x:Key="DarkSurface" Color="#121212"/> <!-- Echter Dark Mode Hintergrund -->
    <SolidColorBrush x:Key="DarkSurfaceVariant" Color="#1E1E1E"/> <!-- Etwas heller -->
    <SolidColorBrush x:Key="DarkSurfaceContainer" Color="#1A1A1A"/> <!-- Container -->
    <SolidColorBrush x:Key="DarkSurfaceContainerHigh" Color="#242424"/> <!-- Erhöhte Bereiche -->
    <SolidColorBrush x:Key="DarkSurfaceContainerHighest" Color="#2C2C2C"/> <!-- Höchste Ebenen -->
    <SolidColorBrush x:Key="DarkOnSurface" Color="#E3E3E3"/> <!-- Haupttext -->
    <SolidColorBrush x:Key="DarkOnSurfaceVariant" Color="#B3B3B3"/> <!-- Sekundärtext -->
    
    <!-- Dark Outline Colors -->
    <SolidColorBrush x:Key="DarkOutline" Color="#404040"/>
    <SolidColorBrush x:Key="DarkOutlineVariant" Color="#2E2E2E"/>
    
    <!-- 🎨 ORANGE ACCENT COLORS - Zusätzliche Orange-Variationen -->
    <SolidColorBrush x:Key="OrangeAccent1" Color="#FF6F00"/> <!-- Sehr dunkles Orange -->
    <SolidColorBrush x:Key="OrangeAccent2" Color="#FF8F00"/> <!-- Dunkles Orange -->
    <SolidColorBrush x:Key="OrangeAccent3" Color="#FFA000"/> <!-- Mittleres Orange -->
    <SolidColorBrush x:Key="OrangeAccent4" Color="#FFB300"/> <!-- Helles Orange -->
    <SolidColorBrush x:Key="OrangeAccent5" Color="#FFC107"/> <!-- Sehr helles Orange -->
    
    <!-- Dark Mode Orange-Variationen -->
    <SolidColorBrush x:Key="DarkOrangeAccent1" Color="#FFCC80"/> <!-- Für Dark Mode Akzente -->
    <SolidColorBrush x:Key="DarkOrangeAccent2" Color="#FFB74D"/>
    <SolidColorBrush x:Key="DarkOrangeAccent3" Color="#FFA726"/>
    <SolidColorBrush x:Key="DarkOrangeAccent4" Color="#FF9800"/>
    <SolidColorBrush x:Key="DarkOrangeAccent5" Color="#FB8C00"/>
    
    <!-- 📝 TYPOGRAPHY SYSTEM - Unverändert, da bereits optimal -->
    
