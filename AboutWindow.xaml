<Window x:Class="Einsatzueberwachung.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        Title="√úber Einsatz√ºberwachung Professional v1.0.0" 
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Icon="pack://application:,,,/Resources/app.ico"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2196F3"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,10"/>
        </Style>
        
        <Style x:Key="VersionStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
        
        <Style x:Key="InfoStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="20,5"/>
            <Setter Property="LineHeight" Value="18"/>
        </Style>
        
        <Style x:Key="SectionStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2196F3"/>
            <Setter Property="Margin" Value="20,15,20,5"/>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="10" Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="5" Opacity="0.3" BlurRadius="15"/>
        </Border.Effect>
        
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,20">
            <StackPanel>
                <!-- Logo & Title Header -->
                <StackPanel HorizontalAlignment="Center" Margin="0,20,0,15">
                    <!-- Large Logo with Real Image -->
                    <Border Width="120" Height="120" CornerRadius="60" 
                           Background="White" Margin="0,0,0,15"
                           BorderBrush="#2196F3" BorderThickness="3"
                           HorizontalAlignment="Center">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" 
                                            Opacity="0.3" BlurRadius="8"/>
                        </Border.Effect>
                        
                        <!-- Real Logo Implementation with Alternative URI -->
                        <Image Source="/Resources/logo.jpeg" 
                              Stretch="UniformToFill" 
                              Width="110" Height="110"
                              ClipToBounds="True">
                            <Image.Clip>
                                <EllipseGeometry RadiusX="55" RadiusY="55" Center="55,55"/>
                            </Image.Clip>
                        </Image>
                    </Border>
                    
                    <!-- App Title -->
                    <TextBlock Text="Einsatz√ºberwachung" Style="{StaticResource TitleStyle}"/>
                </StackPanel>
                
                <TextBlock Text="Professional Edition" Style="{StaticResource VersionStyle}"/>
                <TextBlock x:Name="TxtVersion" Text="Version 1.0" Style="{StaticResource VersionStyle}"/>
