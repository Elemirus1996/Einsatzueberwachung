<Window x:Class="Einsatzueberwachung.TeamDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        Title="Team Details" 
        Height="850" Width="650"
        MinHeight="750" MinWidth="600"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        Background="{DynamicResource Surface}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource Primary}" 
                CornerRadius="10" 
                Padding="20"
                Margin="0,0,0,25">
            <StackPanel>
                <TextBlock x:Name="TeamNameText" 
                          Text="Team Details" 
                          FontSize="32" 
                          FontWeight="Bold"
                          Foreground="White"/>
                <TextBlock x:Name="TeamTypeText" 
                          Text="Teamtyp" 
                          FontSize="18"
                          Foreground="White"
                          Opacity="0.9"
                          Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- TeamControl Container -->
        <Border x:Name="TeamControlContainer" 
                Grid.Row="1"
                Background="{DynamicResource Surface}"
                CornerRadius="10"
                BorderBrush="{DynamicResource Outline}"
                BorderThickness="1">
            <!-- TeamControl wird hier programmatisch eingefÃ¼gt -->
        </Border>
    </Grid>
</Window>
